---
import { getCollection } from 'astro:content';
import GamesList from '@/components/GamesList.astro';

// 获取所有游戏
const allGames = await getCollection('games');

// 定义流行游戏的 slug 列表
const popularGameSlugs = [
  'sprunki-red-sun',
  'sprunki-abgerny',
  'sprunki-sonic'
];

// 筛选流行游戏
const popularGames = allGames.filter((game: any) =>
  popularGameSlugs.includes(game.slug)
);

export interface Props {
  showTitle?: boolean;
  maxItems?: number;
  variant?: 'grid' | 'list';
}

const { showTitle = true, maxItems = 3, variant = 'grid' } = Astro.props;
const displayGames = maxItems ? popularGames.slice(0, maxItems) : popularGames;
---

<section class="popular-games-section">
  <div class="container">
    {showTitle && <h2>Popular Games</h2>}
    <GamesList games={displayGames} variant={variant} />
  </div>
</section>

<style>
  .popular-games-section {
    padding: var(--space-8) 0;
  }

  .popular-games-section h2 {
    font-size: var(--font-size-3xl);
    font-weight: var(--font-weight-bold);
    text-align: center;
    margin-bottom: var(--space-8);
    color: var(--color-gray-900);
  }

  @media (max-width: 768px) {
    .popular-games-section h2 {
      font-size: var(--font-size-2xl);
    }
  }
</style>
