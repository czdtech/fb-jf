---
interface Props {
  hero: {
    title: string;
    description: string;
    mainGame: {
      iframe: string;
      backgroundImage: string;
    };
  };
  games: {
    new: any[];
    popular: any[];
  };
}

const { hero, games } = Astro.props;

// 导入组件
import GameCard from '@/components/GameCard.astro';
import GameIframe from '@/components/GameIframe.astro';
---

<!-- Hero Section: 重构后的组件化设计 -->
<section class="hero-section scroll-animate">
  <div class="hero-section__container">
    <!-- Hero Content: 简洁游戏化设计 -->
    <div class="hero-section__content">
      <!-- 简洁标题 -->
      <h1 class="hero-section__title">{hero.title}</h1>
      <p class="hero-section__description">{hero.description}</p>
    </div>

    <!-- Three Column Layout: New Games | Main Game | Popular Games -->
    <div class="hero-section__games">
      <!-- Left Column - New Games -->
      <div class="hero-section__sidebar hero-section__sidebar--left">
        <div class="hero-section__sidebar-content music-element hero-music-delay-1">
          <h3 class="hero-section__sidebar-title">✨ New Games</h3>
          <div class="hero-section__sidebar-games">
            {games.new.slice(0, 4).map((game: any, index: number) => (
              <div class={`music-element hero-music-delay-${index + 2}`}>
                <GameCard game={game} variant="sidebar" />
              </div>
            ))}
          </div>
        </div>
      </div>

      <!-- Center Column - Main Game -->
      <div class="hero-section__main-game music-element hero-music-delay-3">
        <GameIframe
          id="Fiddlebops-iframe"
          src={hero.mainGame.iframe}
          backgroundImage={hero.mainGame.backgroundImage}
          gameTitle="FiddleBops"
        />
      </div>

      <!-- Right Column - Popular Games -->
      <div class="hero-section__sidebar hero-section__sidebar--right">
        <div class="hero-section__sidebar-content music-element hero-music-delay-2">
          <h3 class="hero-section__sidebar-title">🔥 Popular Games</h3>
          <div class="hero-section__sidebar-games">
            {games.popular.slice(0, 4).map((game: any, index: number) => (
              <div class={`music-element hero-music-delay-${index + 4}`}>
                <GameCard game={game} variant="sidebar" />
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>

  </div>
</section>

<script>
  // 简化的音符动画交互效果
  document.addEventListener('DOMContentLoaded', function() {
    const musicElements = document.querySelectorAll('.music-element');

    // 保留鼠标悬停的音符动画增强
    musicElements.forEach(element => {
      element.addEventListener('mouseenter', function(this: HTMLElement) {
        this.classList.add('hero-music-pulse-hover');
      });

      element.addEventListener('mouseleave', function(this: HTMLElement) {
        this.classList.remove('hero-music-pulse-hover');
      });
    });
  });
</script>

<style>
/**
 * HeroSection Component
 *
 * 背景层级：
 * 1. 主背景渐变 (.hero-section)
 * 2. 装饰纹理 (.hero-section::before)
 * 3. 侧边栏玻璃效果 (.hero-section__sidebar-content)
 * 4. 主要内容背景 (.hero-section__main-game)
 *
 * 使用的设计令牌：
 * - --hero-main-bg: 主背景渐变
 * - --hero-texture-bg: 点状纹理
 * - --hero-sidebar-glass-*: 玻璃拟态效果
 */

/* ==========================================================================
   Hero Section - 组件化设计
   ========================================================================== */

.hero-section {
  /* 使用页面级背景，只需要设置布局和间距 */
  padding-top: calc(80px + var(--space-8));
  padding-bottom: var(--space-8);
  min-height: 85vh;
  display: flex;
  align-items: center;
}

.hero-section__container {
  /* 布局容器 */
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  padding-left: var(--space-4);
  padding-right: var(--space-4);
  position: relative;
  z-index: 1;
}

.hero-section__content {
  /* 内容区域 */
  text-align: center;
  max-width: 900px;
  margin: 0 auto var(--space-8) auto;
}

.hero-section__title {
  font-size: clamp(2.5rem, 6vw, 3.5rem);
  font-weight: var(--font-weight-black);
  line-height: var(--line-height-tight);
  margin: 0 0 var(--space-6) 0;
  color: var(--color-gray-900);
  letter-spacing: -0.01em;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-section__description {
  font-size: var(--font-size-xl);
  line-height: var(--line-height-relaxed);
  color: var(--color-gray-600);
  margin: 0 0 var(--space-8) 0;
  max-width: 900px;
  margin-left: auto;
  margin-right: auto;
  white-space: pre-line;
  word-break: break-word;
  hyphens: auto;
}

.hero-section__games {
  /* 游戏区域布局 */
  display: grid;
  grid-template-columns: 250px 1fr 250px;
  gap: var(--space-4);
  align-items: start;
  max-width: 1400px;
  margin: 0 auto;
  flex: 1;
  min-height: 0;
}

.hero-section__main-game {
  /* 主游戏容器 */
  position: relative;
  width: 100%;
  height: 600px;
  margin: 0;
  background: var(--hero-game-container-bg);
  border-radius: var(--border-radius-lg);
  overflow: hidden;
}

.hero-section__sidebar {
  /* 侧边栏基础样式 */
  display: flex;
  flex-direction: column;
  gap: var(--space-6);
  height: fit-content;
}

.hero-section__sidebar--left,
.hero-section__sidebar--right {
  /* 侧边栏特定样式 */
  height: 100%;
  display: flex;
  flex-direction: column;
}

.hero-section__sidebar-content {
  /* 侧边栏内容容器 - 使用玻璃拟态效果 */
  background: var(--hero-sidebar-glass-bg);
  backdrop-filter: var(--hero-sidebar-glass-blur);
  -webkit-backdrop-filter: var(--hero-sidebar-glass-blur);
  border: var(--hero-sidebar-glass-border);
  border-radius: var(--border-radius-lg);
  padding: var(--space-4);
  box-shadow: var(--hero-sidebar-glass-shadow);
  transition: all var(--duration-300) var(--ease-in-out);
  flex: 1;
  position: relative;
  overflow: hidden;
}

.hero-section__sidebar-content::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--gradient-primary);
  opacity: 0.7;
}

.hero-section__sidebar-content:hover {
  transform: translateY(-2px);
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.15),
    0 4px 12px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.8);
  border-color: rgba(255, 255, 255, 0.4);
}

.hero-section__sidebar-title {
  font-size: var(--font-size-xl);
  font-weight: var(--font-weight-bold);
  margin: 0 0 var(--space-4) 0;
  color: var(--color-gray-900);
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  position: relative;
  padding-bottom: var(--space-3);
  text-align: center;
}

.hero-section__sidebar-title::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 3px;
  background: var(--gradient-primary);
  border-radius: var(--border-radius-full);
}

.hero-section__sidebar-games {
  display: grid;
  grid-template-columns: 1fr;
  gap: var(--space-3);
}

/* ==========================================================================
   响应式设计
   ========================================================================== */

@media (max-width: 1200px) {
  .hero-section__games {
    grid-template-columns: 220px 1fr 220px;
    gap: var(--space-3);
  }
}

@media (max-width: 1024px) {
  .hero-section__games {
    grid-template-columns: 1fr;
    gap: var(--space-4);
  }

  .hero-section__main-game {
    order: 0;
    width: 100%;
    height: 450px;
  }

  .hero-section__sidebar--left {
    order: 1;
  }

  .hero-section__sidebar--right {
    order: 2;
  }

  .hero-section__sidebar {
    flex-direction: row;
    overflow-x: auto;
    padding-bottom: var(--space-4);
    height: auto;
  }

  .hero-section__sidebar-content {
    min-width: 280px;
    flex-shrink: 0;
  }
}

@media (max-width: 768px) {
  .hero-section {
    padding-top: calc(80px + var(--space-4));
    padding-bottom: var(--space-8);
  }

  .hero-section__content {
    margin-bottom: var(--space-4);
    padding: 0 var(--space-4);
  }

  .hero-section__title {
    font-size: clamp(2rem, 8vw, 2.5rem);
    margin-bottom: var(--space-4);
  }

  .hero-section__description {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-6);
    max-width: 100%;
    line-height: 1.5;
    text-align: left;
    padding: 0 var(--space-2);
  }

  .hero-section__main-game {
    height: 380px;
  }

  .hero-section__sidebar {
    flex-direction: column;
  }

  .hero-section__sidebar-content {
    min-width: auto;
  }

  .hero-section__sidebar-games {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-2);
  }

  .hero-section__sidebar-title {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-2);
  }

  .hero-section__sidebar-title::after {
    width: 30px;
    height: 2px;
  }

  .hero-section__sidebar-content {
    padding: var(--space-3);
  }

  .hero-section__sidebar-content:hover {
    transform: none;
  }
}

@media (max-width: 480px) {
  .hero-section {
    padding-top: calc(80px + var(--space-2));
    padding-bottom: var(--space-6);
  }

  .hero-section__content {
    margin-bottom: var(--space-2);
    padding: 0 var(--space-3);
  }

  .hero-section__title {
    font-size: clamp(1.75rem, 9vw, 2rem);
  }

  .hero-section__description {
    font-size: var(--font-size-base);
    line-height: 1.4;
    letter-spacing: 0.01em;
    text-align: center;
    padding: 0 var(--space-1);
  }

  .hero-section__main-game {
    height: 320px;
  }

  .hero-section__sidebar-games {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-1);
  }

  .hero-section__sidebar-title {
    font-size: var(--font-size-base);
    margin-bottom: var(--space-3);
    padding-bottom: var(--space-1);
  }

  .hero-section__sidebar-title::after {
    width: 25px;
    height: 2px;
  }

  .hero-section__sidebar-content {
    padding: var(--space-2);
  }
}
</style>
