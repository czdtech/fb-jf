---
import SoundSample from '@/components/SoundSample.astro';
import { getTranslation } from '@/i18n/utils';

// TypeScript接口定义
interface Props {
  soundSamples: any[];
}

const { soundSamples } = Astro.props;

// 获取当前语言和翻译 - 使用Astro官方i18n系统
const currentLocale = (Astro.currentLocale as any) || 'en';
const translation = await getTranslation(currentLocale);
const ui = translation?.ui || {};
---

<!-- Sound Samples Section -->
<section class="sound-samples-section scroll-animate">
  <div class="container">
    <div class="section-header center-only">
      <div>
        <h2 class="section-title">{ui?.soundSamples?.title || 'Explore the Different Sounds in Fiddlebops Incredibox'}</h2>
        <p class="section-description">
          {ui?.soundSamples?.description || 'Listen to authentic FiddleBops character sounds: Beats from Garrett and Mr. Moon, Effects from Cyborg Throat Singing, Melodies from Blues Clues Radio 2011, and Vocals from Mike Ehrmantraut'}
        </p>
      </div>
    </div>

    <div class="sound-samples-container">
      <div class="sound-samples-grid">
        {soundSamples.map((sample: any) => (
          <div class="sound-sample-wrapper">
            <SoundSample sample={sample} />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
/* ==========================================================================
   Sound Samples Section - Modern Glass Design
   ========================================================================== */

.sound-samples-section {
  padding: var(--space-section-margin) 0;
}

.section-header {
  text-align: center;
  max-width: 900px;
  margin: 0 auto var(--space-large) auto;
}

.section-header.center-only {
  text-align: center;
  max-width: 900px;
  margin: 0 auto var(--space-large) auto;
}

.section-title {
  font-size: var(--font-size-4xl);
  font-weight: var(--font-weight-bold);
  margin: 0 0 var(--space-base) 0;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-description {
  font-size: var(--font-size-xl);
  line-height: var(--line-height-relaxed);
  color: var(--color-gray-600);
  margin: 0 0 var(--space-large) 0;
  max-width: 900px;
  margin-left: auto;
  margin-right: auto;
  white-space: pre-line;
  word-break: break-word;
  hyphens: auto;
}

.sound-samples-container {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.98) 0%,
    rgba(248, 250, 252, 0.95) 50%,
    rgba(241, 245, 249, 0.98) 100%
  );
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border: 1px solid rgba(255, 255, 255, 0.4);
  border-radius: var(--border-radius-lg);
  padding: var(--space-large);
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.12),
    0 4px 12px rgba(0, 0, 0, 0.08),
    inset 0 1px 0 rgba(255, 255, 255, 0.7),
    inset 0 0 20px rgba(255, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
  margin: 0 auto;
}

.sound-samples-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    var(--color-primary-500) 20%,
    var(--color-primary-600) 50%,
    var(--color-primary-500) 80%,
    transparent 100%
  );
  opacity: 0.8;
}

.sound-samples-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--space-large);
  margin: 0 auto;
}

.sound-sample-wrapper {
  display: flex;
  min-height: 280px;
}

.sound-sample-wrapper > * {
  width: 100%;
}

/* Category-specific styling for visual organization */
.sound-samples-grid .sound-sample-wrapper:nth-child(1),
.sound-samples-grid .sound-sample-wrapper:nth-child(2),
.sound-samples-grid .sound-sample-wrapper:nth-child(3),
.sound-samples-grid .sound-sample-wrapper:nth-child(4),
.sound-samples-grid .sound-sample-wrapper:nth-child(5) {
  /* Beats row */
}

.sound-samples-grid .sound-sample-wrapper:nth-child(6),
.sound-samples-grid .sound-sample-wrapper:nth-child(7),
.sound-samples-grid .sound-sample-wrapper:nth-child(8),
.sound-samples-grid .sound-sample-wrapper:nth-child(9),
.sound-samples-grid .sound-sample-wrapper:nth-child(10) {
  /* Effects row */
}

/* Add subtle category separators */
.sound-samples-grid .sound-sample-wrapper:nth-child(5n+1)::before {
  content: attr(data-category);
  position: absolute;
  top: -40px;
  left: 0;
  font-size: 14px;
  font-weight: 600;
  color: var(--color-gray-600);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Responsive Design - 移动优先设计 */
/* 超宽屏幕 - 5列布局 */
@media (min-width: 1600px) {
  .sound-samples-grid {
    grid-template-columns: repeat(5, 1fr);
    gap: var(--space-large);
  }
  
  .sound-samples-container {
    max-width: 1500px;
    margin: 0 auto;
  }
}

@media (max-width: 1400px) {
  .sound-samples-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-base);
  }
}

@media (max-width: 1200px) {
  .sound-samples-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-base);
  }
}

/* iPad 和平板优化 - 精确宽度控制 */
@media (max-width: 1024px) and (min-width: 900px) {
  .sound-samples-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-small);
    max-width: 900px;
    margin: 0 auto;
  }
  
  .sound-samples-container {
    padding: var(--space-base);
    margin: 0 var(--space-base);
    max-width: 950px;
  }
}

/* 移动优先：优化平板和大手机的显示 */
@media (max-width: 900px) {
  .sound-samples-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-base);
    max-width: 700px;
    margin: 0 auto;
  }
  
  .sound-samples-container {
    padding: var(--space-base);
    margin: 0 var(--space-base);
  }
}

@media (max-width: 768px) {
  .section-title {
    font-size: var(--font-size-2xl) !important;
  }

  .section-description {
    font-size: var(--font-size-lg);
    max-width: 100%;
    line-height: 1.5;
    text-align: left;
    padding: 0 var(--space-small);
  }

  .sound-samples-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-base);
  }
  
  .sound-samples-container {
    padding: var(--space-base);
    margin: 0 var(--space-xs);
  }

  .sound-sample-wrapper {
    min-height: 0;
  }
}

/* iPhone 14 Pro 和现代手机优化 (390-430px) */
@media (max-width: 430px) and (min-width: 390px) {
  .sound-samples-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-base);
    padding: 0 var(--space-xs);
  }
  
  .sound-samples-container {
    padding: var(--space-base);
    margin: 0 var(--space-xs);
  }

  .sound-sample-wrapper {
    min-height: 0;
  }

  .section-title {
    font-size: var(--font-size-xl) !important;
  }
  
  .section-description {
    font-size: var(--font-size-base);
    line-height: 1.4;
    text-align: center;
    padding: 0 var(--space-xs);
  }
}

/* 手机竖屏优化 - 小屏手机 */
@media (max-width: 390px) {
  .section-header {
    margin-bottom: var(--space-base);
    padding: 0 var(--space-xs);
  }
  
  .section-title {
    font-size: var(--font-size-xl) !important;
    line-height: 1.2;
  }

  .sound-samples-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-base);
  }
  
  .sound-samples-container {
    padding: var(--space-base);
    margin: 0 var(--space-xs);
    border-radius: var(--border-radius-base);
  }

  .sound-sample-wrapper {
    min-height: 0;
  }

  .section-description {
    font-size: var(--font-size-base);
    line-height: 1.4;
    letter-spacing: 0.01em;
    text-align: center;
    padding: 0 var(--space-xs);
  }
}

/* 超小屏幕优化（iPhone SE等） */
@media (max-width: 360px) {
  .section-header {
    padding: 0 var(--space-xs);
  }
  
  .section-title {
    font-size: var(--font-size-lg) !important;
    line-height: 1.1;
  }
  
  .section-description {
    font-size: var(--font-size-sm);
    line-height: 1.3;
    padding: 0 var(--space-xs);
  }

  .sound-samples-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-small);
  }
  
  .sound-samples-container {
    padding: var(--space-base);
    margin: 0 var(--space-xs);
  }
}
</style>
