---
import SoundSample from '@/components/SoundSample.astro';

// TypeScriptÊé•Âè£ÂÆö‰πâ
interface Props {
  soundSamples: any[];
}

const { soundSamples } = Astro.props;
---

<!-- Sound Samples Section -->
<section class="sound-samples-section scroll-animate">
  <div class="container">
    <div class="section-header center-only">
      <div>
        <h2 class="section-title">üéµ Sound Samples</h2>
        <p class="section-description">
          Listen to authentic FiddleBops character sounds: Beats from Garrett and Mr. Moon, Effects from Cyborg Throat Singing, Melodies from Blues Clues Radio 2011, and Vocals from Mike Ehrmantraut
        </p>
      </div>
    </div>

    <div class="sound-samples-container">
      <div class="sound-samples-grid">
        {soundSamples.map((sample: any) => (
          <div class="sound-sample-wrapper">
            <SoundSample sample={sample} />
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
/* ==========================================================================
   Sound Samples Section - Modern Glass Design
   ========================================================================== */

.sound-samples-section {
  padding: var(--space-12) 0;
}

.section-header {
  text-align: center;
  max-width: 900px;
  margin: 0 auto var(--space-8) auto;
}

.section-header.center-only {
  text-align: center;
  max-width: 900px;
  margin: 0 auto var(--space-8) auto;
}

.section-title {
  font-size: var(--font-size-4xl);
  font-weight: var(--font-weight-bold);
  margin: 0 0 var(--space-4) 0;
  background: var(--gradient-primary);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.section-description {
  font-size: var(--font-size-xl);
  line-height: var(--line-height-relaxed);
  color: var(--color-gray-600);
  margin: 0 0 var(--space-8) 0;
  max-width: 900px;
  margin-left: auto;
  margin-right: auto;
  white-space: pre-line;
  word-break: break-word;
  hyphens: auto;
}

.sound-samples-container {
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.98) 0%,
    rgba(248, 250, 252, 0.95) 50%,
    rgba(241, 245, 249, 0.98) 100%
  );
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  border: 1px solid rgba(255, 255, 255, 0.4);
  border-radius: var(--border-radius-lg);
  padding: var(--space-8);
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.12),
    0 4px 12px rgba(0, 0, 0, 0.08),
    inset 0 1px 0 rgba(255, 255, 255, 0.7),
    inset 0 0 20px rgba(255, 255, 255, 0.1);
  position: relative;
  overflow: hidden;
  margin: 0 auto;
}

.sound-samples-container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 3px;
  background: linear-gradient(
    90deg,
    transparent 0%,
    var(--color-primary-500) 20%,
    var(--color-primary-600) 50%,
    var(--color-primary-500) 80%,
    transparent 100%
  );
  opacity: 0.8;
}

.sound-samples-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 32px;
  margin: 0 auto;
}

.sound-sample-wrapper {
  display: flex;
  min-height: 280px;
}

.sound-sample-wrapper > * {
  width: 100%;
}

/* Category-specific styling for visual organization */
.sound-samples-grid .sound-sample-wrapper:nth-child(1),
.sound-samples-grid .sound-sample-wrapper:nth-child(2),
.sound-samples-grid .sound-sample-wrapper:nth-child(3),
.sound-samples-grid .sound-sample-wrapper:nth-child(4),
.sound-samples-grid .sound-sample-wrapper:nth-child(5) {
  /* Beats row */
}

.sound-samples-grid .sound-sample-wrapper:nth-child(6),
.sound-samples-grid .sound-sample-wrapper:nth-child(7),
.sound-samples-grid .sound-sample-wrapper:nth-child(8),
.sound-samples-grid .sound-sample-wrapper:nth-child(9),
.sound-samples-grid .sound-sample-wrapper:nth-child(10) {
  /* Effects row */
}

/* Add subtle category separators */
.sound-samples-grid .sound-sample-wrapper:nth-child(5n+1)::before {
  content: attr(data-category);
  position: absolute;
  top: -40px;
  left: 0;
  font-size: 14px;
  font-weight: 600;
  color: var(--color-gray-600);
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Responsive Design */
@media (max-width: 1200px) {
  .sound-samples-grid {
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
  }
}

@media (max-width: 768px) {
  .section-header {
    margin-bottom: var(--space-6);
  }

  .section-title {
    font-size: var(--font-size-2xl) !important;
  }

  .section-description {
    font-size: var(--font-size-lg);
    margin-bottom: var(--space-6);
    max-width: 100%;
    line-height: 1.5;
    text-align: left;
  }

  .sound-samples-container {
    padding: var(--space-6);
  }

  .sound-samples-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
  }
  
  .sound-sample-wrapper {
    min-height: 250px;
  }
}

@media (max-width: 600px) {
  .sound-samples-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }
  
  .sound-sample-wrapper {
    min-height: 220px;
  }
}

@media (max-width: 480px) {
  .sound-samples-container {
    padding: var(--space-4);
  }

  .sound-samples-grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 12px;
  }
  
  .sound-sample-wrapper {
    min-height: 200px;
  }

  .section-description {
    font-size: var(--font-size-base);
    line-height: 1.4;
    letter-spacing: 0.01em;
    text-align: center;
  }
}
</style>
