---
// TypeScript接口定义
import { getTranslation } from '@/i18n/utils';

interface Props {}

// 获取当前语言和翻译 - 使用Astro官方i18n系统
const currentLocale = (Astro.currentLocale as any) || 'en';
const translation = await getTranslation(currentLocale);
const ui = translation?.ui || {};
---

<!-- About Section -->
<section class="about scroll-animate" id="about">
  <div class="container">
    <div class="section-header center-only">
      <div>
        <h2 class="section-title">📖 {ui.sections.about}</h2>
        <p class="section-description">
          {ui.about?.description || 'Released November 7, 2024, this comedy-focused Incredibox mod features 25 absurd characters including Garrett, Mr. Moon, and Skibidi Biden, creating chaotic music at an energetic 206 BPM'}
        </p>
      </div>
    </div>

    <div class="about-container">
      <div class="about-content glass scroll-animate">
        <h3 class="about-section-title">{ui.about?.gameInfo?.title || '🎮 I. FiddleBops Game Information'}</h3>

        <div class="about-info-grid">
          <div class="about-info-item">
            <span class="about-label">{ui.about?.gameInfo?.officialName || 'Official Name:'}</span>
            <span class="about-value">{ui.about?.gameInfo?.officialNameValue || 'FiddleBops (Fanon Incredibox Mod)'}</span>
          </div>
          <div class="about-info-item">
            <span class="about-label">{ui.about?.gameInfo?.releaseDate || 'Release Date:'}</span>
            <span class="about-value">{ui.about?.gameInfo?.releaseDateValue || 'November 7th, 2024'}</span>
          </div>
          <div class="about-info-item">
            <span class="about-label">{ui.about?.gameInfo?.bpm || 'BPM:'}</span>
            <span class="about-value">{ui.about?.gameInfo?.bpmValue || '206 BPM (103 in half-time)'}</span>
          </div>
          <div class="about-info-item">
            <span class="about-label">{ui.about?.gameInfo?.characterCount || 'Character Count:'}</span>
            <span class="about-value">{ui.about?.gameInfo?.characterCountValue || '25 Characters (20 Main + 5 Bonuses)'}</span>
          </div>
          <div class="about-info-item">
            <span class="about-label">{ui.about?.gameInfo?.modType || 'Mod Type:'}</span>
            <span class="about-value">{ui.about?.gameInfo?.modTypeValue || '"Joke" Mod with Absurd Characters'}</span>
          </div>
          <div class="about-info-item">
            <span class="about-label">{ui.about?.gameInfo?.creators || 'Creators:'}</span>
            <span class="about-value"
              >{ui.about?.gameInfo?.creatorsValue || 'Kautaruma, SkyFactorial, BezieAnims, Maddie (Jukebox), RubysArt_, Shackle, radio_cative, personaladventure'}</span
            >
          </div>
        </div>

        <div class="about-divider"></div>

        <h4 class="about-subsection-title">{ui.about?.characterCategories?.title || '🎭 II. Character Categories'}</h4>
        <div class="about-features">
          <div class="about-feature-item">
            <h5>{ui.about?.characterCategories?.beats?.title || '🥁 Beats (5 Characters)'}</h5>
            <p>
              <strong>{ui.about?.characterCategories?.beats?.thisIsGarrett || 'This Is Garrett - Slaps his belly for kick drums and opens mouth for snares'}</strong><br />
              <strong>{ui.about?.characterCategories?.beats?.greenDrumMachine || 'Green Drum Machine - Christmas snowwoman with bongo drums'}</strong><br />
              <strong>{ui.about?.characterCategories?.beats?.mrMoon || 'Mr. Moon - Apple "Full Moon Face" emoji with 3D animation'}</strong><br />
              <strong>{ui.about?.characterCategories?.beats?.snaireCombi || 'Snaire & Combi - Additional rhythmic elements'}</strong>
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.characterCategories?.effects?.title || '🌟 Effects (5 Characters)'}</h5>
            <p>
              <strong>{ui.about?.characterCategories?.effects?.description || 'YTPMV Elf, Cyborg Throat Singing, Lil\' Purp, Braylen B. Bothamious I, Tina The Beepboxer'}</strong><br />
              {ui.about?.characterCategories?.effects?.subtitle || 'Each provides unique sound effects and atmospheric elements'}
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.characterCategories?.melodies?.title || '🎹 Melodies (5 Characters)'}</h5>
            <p>
              <strong>{ui.about?.characterCategories?.melodies?.description || 'Blues Clues Radio 2011, Marcello, Eucerin, Uncanny Melody, Keisha'}</strong><br />
              {ui.about?.characterCategories?.melodies?.subtitle || 'Create the main melodic lines and musical themes'}
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.characterCategories?.voices?.title || '🎤 Voices (5 Characters)'}</h5>
            <p>
              <strong>{ui.about?.characterCategories?.voices?.description || 'Skibidi Biden, Sporbb The Animator, Tronic the Chipmunk, Mike Ehrmantraut, Blue Vest Munchie'}</strong><br />
              {ui.about?.characterCategories?.voices?.subtitle || 'Vocal elements and character expressions'}
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.characterCategories?.bonus?.title || '🎆 Bonus Characters (5 Special)'}</h5>
            <p>
              <strong>{ui.about?.characterCategories?.bonus?.description || 'Words With Friends Tile, Fred Figglehorn, Scrub Daddy GF, Jummbox, Boykixxer'}</strong><br />
              {ui.about?.characterCategories?.bonus?.subtitle || 'Unlockable through special combinations and secret methods'}
            </p>
          </div>
        </div>

        <div class="about-divider"></div>

        <h4 class="about-subsection-title">{ui.about?.features?.title || '🎨 III. Game Features & Design'}</h4>
        <div class="about-features">
          <div class="about-feature-item">
            <h5>{ui.about?.features?.comedy?.title || '😂 Comedy-Focused Design'}</h5>
            <p>
              {ui.about?.features?.comedy?.description || 'Intentionally absurd character names and designs create a humorous experience. Characters like "Skibidi Biden" and "Scrub Daddy GF" exemplify the mod\'s comedic approach.'}
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.features?.highEnergy?.title || '🎵 High-Energy Music'}</h5>
            <p>
              {ui.about?.features?.highEnergy?.description || '206 BPM creates fast-paced, energetic compositions. The tempo encourages dynamic and lively musical creations unlike traditional Incredibox versions.'}
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.features?.animations?.title || '🎪 Special Animations'}</h5>
            <p>
              {ui.about?.features?.animations?.description || 'Characters feature unique animations: Garrett\'s belly slapping, Green Drum Machine\'s leg dangling, Mr. Moon\'s 3D transformations bring personalities to life.'}
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.features?.antiPiracy?.title || '🔒 Anti-Piracy Protection'}</h5>
            <p>
              {ui.about?.features?.antiPiracy?.description || 'The mod includes special anti-piracy measures to protect the creators\' work and ensure proper distribution through authorized channels.'}
            </p>
          </div>
        </div>

        <div class="about-divider"></div>

        <h4 class="about-subsection-title">{ui.about?.platform?.title || '🎯 IV. Game Tags & Platform'}</h4>
        <div class="about-features">
          <div class="about-feature-item">
            <h5>{ui.about?.platform?.categories?.title || '🏷️ Game Categories'}</h5>
            <p>
              {ui.about?.platform?.categories?.description || 'Music Creation, Rhythm, Experimental, Educational, Family-Friendly, Casual, Single Player, Creative, Comedy Mod'}
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.platform?.access?.title || '🌐 Platforms & Access'}</h5>
            <p>
              <strong>{ui.about?.platform?.access?.mainPlatform || 'Main Platform:'}</strong> {ui.about?.platform?.access?.mainPlatformValue || 'playfiddlebops.com (Web Browser)'}<br />
              <strong>{ui.about?.platform?.access?.alsoAvailable || 'Also Available:'}</strong> {ui.about?.platform?.access?.alsoAvailableValue || 'itch.io, Scratch'}<br />
              <strong>{ui.about?.platform?.access?.price || 'Price:'}</strong> {ui.about?.platform?.access?.priceValue || 'Free to Play'}<br />
              <strong>{ui.about?.platform?.access?.noDownload || 'No Download Required - Play directly in browser'}</strong>
            </p>
          </div>
        </div>

        <div class="about-divider"></div>

        <h4 class="about-subsection-title">
          {ui.about?.community?.title || '🌟 V. Popular FiddleBops Mods & Community'}
        </h4>
        <div class="about-features">
          <div class="about-feature-item">
            <h5>{ui.about?.community?.mods?.title || '🎮 Community Mods'}</h5>
            <p>
              {ui.about?.community?.mods?.fiddlebopsSprunki || '• Fiddlebops but Sprunki - Horror-themed crossover'}<br />
              {ui.about?.community?.mods?.fiddlebopsFix || '• Fiddlebops Fix - Bug fixes and improvements'}<br />
              {ui.about?.community?.mods?.sprunksters || '• Fiddlebops Sprunksters Remix - New sound combinations'}<br />
              {ui.about?.community?.mods?.pyramixed || '• Fiddlebops Pyramixed - Egyptian-themed remix'}<br />
              {ui.about?.community?.mods?.exploreMore || 'Explore more mods in our games section!'}
            </p>
          </div>
          <div class="about-feature-item">
            <h5>{ui.about?.community?.share?.title || '🔗 Share Your Creations'}</h5>
            <p>
              {ui.about?.community?.share?.joinCommunity || 'Join the FiddleBops community!'}<br />
              <strong>{ui.about?.community?.share?.youtube || 'YouTube:'}</strong> {ui.about?.community?.share?.youtubeDesc || 'Upload gameplay videos'}<br />
              <strong>{ui.about?.community?.share?.tiktok || 'TikTok:'}</strong> {ui.about?.community?.share?.tiktokDesc || 'Share short music clips'}<br />
              <strong>{ui.about?.community?.share?.twitter || 'Twitter:'}</strong> {ui.about?.community?.share?.twitterDesc || 'Use #FiddleBops'}<br />
              {ui.about?.community?.share?.screenRecord || 'Use screen recording software to capture and share your musical masterpieces!'}
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* ==========================================================================
   About Section - Modern Glass Design
   ========================================================================== */

  .about {
    padding-top: var(--space-12);
    padding-bottom: var(--space-12);
  }

  .section-header {
    text-align: center;
    max-width: 900px;
    margin: 0 auto var(--space-8) auto;
  }

  .section-header.center-only {
    text-align: center;
    max-width: 900px;
    margin: 0 auto var(--space-8) auto;
  }

  .section-title {
    font-size: var(--font-size-4xl);
    font-weight: var(--font-weight-bold);
    margin: 0 0 var(--space-4) 0;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .section-description {
    font-size: var(--font-size-xl);
    line-height: var(--line-height-relaxed);
    color: var(--color-gray-600);
    margin: 0 0 var(--space-8) 0;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
    white-space: pre-line;
    word-break: break-word;
    hyphens: auto;
  }

  .about-container {
    margin: 0 auto;
  }

  .about-content {
    padding: var(--space-8);
    border-radius: var(--border-radius-lg);
    transition: all var(--duration-300) var(--ease-rhythm);
  }

  .about-content:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-xl);
  }

  .about-section-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    margin: 0 0 var(--space-6) 0;
    color: var(--color-primary-700);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .about-subsection-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    margin: var(--space-6) 0 var(--space-4) 0;
    color: var(--color-gray-800);
  }

  .about-info-grid {
    display: grid;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .about-info-item {
    display: grid;
    grid-template-columns: 120px 1fr;
    gap: var(--space-3);
    padding: var(--space-3);
    background: rgba(255, 255, 255, 0.5);
    border-radius: var(--border-radius-md);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all var(--duration-200) var(--ease-in-out);
  }

  .about-info-item:hover {
    background: rgba(255, 255, 255, 0.7);
    transform: translateX(4px);
  }

  .about-label {
    font-weight: var(--font-weight-semibold);
    color: var(--color-primary-600);
    font-size: var(--font-size-sm);
  }

  .about-value {
    color: var(--color-gray-700);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
  }

  .about-divider {
    height: 2px;
    background: var(--gradient-primary);
    border-radius: var(--border-radius-full);
    margin: var(--space-8) 0;
    opacity: 0.3;
  }

  .about-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .about-feature-item {
    padding: var(--space-4);
    background: rgba(255, 255, 255, 0.4);
    border-radius: var(--border-radius-md);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all var(--duration-300) var(--ease-rhythm);
  }

  .about-feature-item:hover {
    background: rgba(255, 255, 255, 0.6);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .about-feature-item h5 {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
    margin: 0 0 var(--space-2) 0;
    color: var(--color-primary-600);
  }

  .about-feature-item p {
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
    line-height: var(--line-height-relaxed);
    margin: 0;
  }

  /* About Section Responsive Design */
  @media (max-width: 768px) {
    .section-header {
      margin-bottom: var(--space-6);
    }

    .section-title {
      font-size: var(--font-size-2xl) !important;
    }

    .section-description {
      font-size: 1.1875rem; /* 19px - 提升移动端段落可读性 */
      margin-bottom: var(--space-6);
      max-width: 100%;
      line-height: 1.5;
      text-align: left;
    }

    .about-content {
      padding: var(--space-6);
    }

    .about-section-title {
      font-size: var(--font-size-xl);
    }

    .about-subsection-title {
      font-size: var(--font-size-base);
    }

    .about-info-item {
      grid-template-columns: 1fr;
      gap: var(--space-1);
    }

    .about-features {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .about-content {
      padding: var(--space-4);
    }

    .section-description {
      font-size: 1.125rem; /* 18px - 小屏设备段落文字优化 */
      line-height: 1.4;
      letter-spacing: 0.01em;
      text-align: center;
    }
  }
</style>
