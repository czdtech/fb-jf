---
/**
 * Accordion Component
 * A collapsible content component with smooth animations
 * 
 * Usage:
 * <Accordion title="Section Title" defaultOpen={false}>
 *   <p>Content goes here</p>
 * </Accordion>
 */

interface Props {
  title: string;
  defaultOpen?: boolean;
  class?: string;
}

const { title, defaultOpen = false, class: className = '' } = Astro.props;
---

<div class={`accordion ${className} ${defaultOpen ? 'is-open' : ''}`} data-accordion>
  <button 
    class="accordion__header" 
    aria-expanded={defaultOpen ? 'true' : 'false'}
    type="button"
  >
    <span class="accordion__title">{title}</span>
    <span class="accordion__icon" aria-hidden="true">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polyline points="6,9 12,15 18,9"></polyline>
      </svg>
    </span>
  </button>
  <div class="accordion__content" aria-hidden={defaultOpen ? 'false' : 'true'} inert={!defaultOpen}>
    <div class="accordion__body">
      <slot />
    </div>
  </div>
</div>

<style>
  .accordion {
    border: 1px solid var(--color-border, #222);
    border-radius: var(--radius-lg, 16px);
    margin-bottom: var(--spacing-md, 12px);
    background: var(--color-bg-card, #111);
    overflow: hidden;
    transition: box-shadow var(--transition-normal, 0.3s ease);
  }

  .accordion:hover {
    box-shadow: var(--shadow-md, 0 6px 16px rgba(0, 0, 0, 0.5));
  }

  .accordion__header {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-lg, 16px) var(--spacing-xl, 20px);
    background: transparent;
    border: none;
    cursor: pointer;
    color: var(--color-text-white, #fff);
    font-size: var(--font-size-lg, 18px);
    font-weight: var(--font-weight-semibold, 600);
    text-align: left;
    transition: background-color var(--transition-fast, 0.2s ease);
  }

  .accordion__header:hover {
    background: rgba(255, 107, 157, 0.05);
  }

  .accordion__title {
    flex: 1;
  }

  .accordion__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 24px;
    height: 24px;
    color: var(--color-primary, #ff6b9d);
    transition: transform var(--transition-normal, 0.3s ease);
  }

  .accordion.is-open .accordion__icon {
    transform: rotate(180deg);
  }

  .accordion__content {
    display: grid;
    grid-template-rows: 0fr;
    transition: grid-template-rows var(--transition-normal, 0.3s ease);
  }

  .accordion.is-open .accordion__content {
    grid-template-rows: 1fr;
  }

  .accordion__body {
    overflow: hidden;
    padding: 0 var(--spacing-xl, 20px);
    transition: padding var(--transition-normal, 0.3s ease);
  }

  .accordion.is-open .accordion__body {
    padding: var(--spacing-lg, 16px) var(--spacing-xl, 20px);
    padding-top: 0;
  }

  /* Content styling */
  .accordion__body :global(p) {
    margin-bottom: var(--spacing-md, 12px);
    color: var(--color-text-secondary, #999);
    line-height: 1.7;
  }

  .accordion__body :global(p:last-child) {
    margin-bottom: 0;
  }

  .accordion__body :global(ul),
  .accordion__body :global(ol) {
    margin: var(--spacing-md, 12px) 0;
    padding-left: var(--spacing-xl, 20px);
    color: var(--color-text-secondary, #999);
  }

  .accordion__body :global(li) {
    margin-bottom: var(--spacing-sm, 8px);
    line-height: 1.6;
  }

  .accordion__body :global(h4) {
    color: var(--color-text-white, #fff);
    margin: var(--spacing-lg, 16px) 0 var(--spacing-sm, 8px);
    font-size: var(--font-size-base, 16px);
  }

  .accordion__body :global(hr) {
    border: none;
    border-top: 1px solid var(--color-border, #222);
    margin: var(--spacing-lg, 16px) 0;
  }

  .accordion__body :global(a) {
    color: var(--color-primary, #ff6b9d);
  }

  .accordion__body :global(a:hover) {
    color: var(--color-primary-light, #ff8cb2);
  }
</style>

<script>
  function initAccordions() {
    const accordions = document.querySelectorAll('[data-accordion]');
    
    accordions.forEach((accordion, index) => {
      const headerEl = accordion.querySelector('.accordion__header');
      const contentEl = accordion.querySelector('.accordion__content');
      
      if (!(headerEl instanceof HTMLButtonElement) || !(contentEl instanceof HTMLElement)) return;

      if (!(accordion instanceof HTMLElement)) return;
      const accordionEl = accordion;
      const header = headerEl;
      const content = contentEl;

      // Skip if already initialized
      if (accordionEl.dataset.accordionInitialized === 'true') return;
      accordionEl.dataset.accordionInitialized = 'true';

      // Set up ARIA relationships once
      if (!content.id) content.id = `accordion-content-${index}`;
      header.setAttribute('aria-controls', content.id);

      // Cache initial state
      const isOpen = accordionEl.classList.contains('is-open');
      header.setAttribute('aria-expanded', String(isOpen));
      content.setAttribute('aria-hidden', String(!isOpen));
      content.toggleAttribute('inert', !isOpen);

      // Use passive event listener for better scroll performance
      header.addEventListener('click', () => {
        const willOpen = !accordionEl.classList.contains('is-open');
        accordionEl.classList.toggle('is-open', willOpen);
        header.setAttribute('aria-expanded', String(willOpen));
        content.setAttribute('aria-hidden', String(!willOpen));
        content.toggleAttribute('inert', !willOpen);
      }, { passive: true });
    });
  }
  
  // Initialize on load
  initAccordions();
  
  // Re-initialize on view transitions (Astro) - only bind once
  if (!window.__accordionPageLoadBound) {
    window.__accordionPageLoadBound = true;
    document.addEventListener('astro:page-load', initAccordions);
  }
</script>
