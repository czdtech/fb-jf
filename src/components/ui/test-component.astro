---
import { Button } from '@/components/ui/button'
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card'
import { Badge } from '@/components/ui/badge'
---

<div class="p-8 space-y-4">
  <h2 class="text-2xl font-bold text-primary">shadcn/ui Test Components</h2>
  
  <div class="flex gap-4">
    <Button client:load>Default Button</Button>
    <Button variant="music-primary" client:load>Music Primary</Button>
    <Button variant="outline" client:load>Outline</Button>
  </div>
  
  <Card class="w-96">
    <CardHeader>
      <CardTitle>Test Card</CardTitle>
    </CardHeader>
    <CardContent>
      <p class="text-muted-foreground">This is a test card using shadcn/ui components.</p>
      <div class="mt-4 flex gap-2">
        <Badge>Default</Badge>
        <Badge variant="secondary">Secondary</Badge>
      </div>
    </CardContent>
  </Card>
</div>