// Test component to verify all shadcn/ui components are working
---

<div class="p-8 space-y-8">
  <h1 class="text-2xl font-bold">shadcn/ui Components Test</h1>
  
  <!-- Button Test -->
  <div class="space-y-4">
    <h2 class="text-lg font-semibold">Button Component</h2>
    <div class="flex gap-4 flex-wrap">
      <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-primary-foreground hover:bg-primary/90 h-10 px-4 py-2">
        Default Button
      </button>
      <button class="inline-flex items-center justify-center whitespace-nowrap rounded-md text-sm font-medium ring-offset-background transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 bg-primary text-white hover:bg-primary/90 shadow-lg hover:shadow-xl transition-all duration-200 h-10 px-4 py-2">
        Music Primary Button
      </button>
    </div>
  </div>

  <!-- Card Test -->
  <div class="space-y-4">
    <h2 class="text-lg font-semibold">Card Component</h2>
    <div class="rounded-lg border bg-card text-card-foreground shadow-sm max-w-md">
      <div class="flex flex-col space-y-1.5 p-6">
        <h3 class="text-2xl font-semibold leading-none tracking-tight">Card Title</h3>
      </div>
      <div class="p-6 pt-0">
        <p>This is a test card content to verify the Card component is working correctly.</p>
      </div>
    </div>
  </div>

  <!-- Badge Test -->
  <div class="space-y-4">
    <h2 class="text-lg font-semibold">Badge Component</h2>
    <div class="flex gap-2 flex-wrap">
      <div class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-primary text-primary-foreground hover:bg-primary/80">
        Default Badge
      </div>
      <div class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold transition-colors focus:outline-none focus:ring-2 focus:ring-ring focus:ring-offset-2 border-transparent bg-secondary text-secondary-foreground hover:bg-secondary/80">
        Secondary Badge
      </div>
    </div>
  </div>

  <!-- Navigation Menu Test -->
  <div class="space-y-4">
    <h2 class="text-lg font-semibold">Navigation Menu Component</h2>
    <p class="text-sm text-muted-foreground">Navigation Menu component installed and ready for use.</p>
  </div>

  <!-- Sheet Test -->
  <div class="space-y-4">
    <h2 class="text-lg font-semibold">Sheet Component</h2>
    <p class="text-sm text-muted-foreground">Sheet component installed and ready for use (requires React context for full testing).</p>
  </div>
</div>