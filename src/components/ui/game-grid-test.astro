<div class="min-h-screen bg-background p-8 space-y-16">
  <div class="max-w-7xl mx-auto">
    <h1 class="text-4xl font-bold text-center mb-12 text-foreground">
      GameGrid Responsive Test
    </h1>
    
    <!-- Standard Grid Variant -->
    <div class="space-y-4">
      <h2 class="text-2xl font-semibold text-foreground">Standard Grid (1→2→3→4→5 columns)</h2>
      <p class="text-muted-foreground text-sm">
        Breakpoints: xs(1) → sm(2) → md(3) → lg(4) → xl(5)
      </p>
      <GameGrid 
        games={mockGames} 
        title="Popular Music Games" 
        variant="standard"
        moreLink="/games"
      />
    </div>
    
    <!-- Featured Grid Variant -->
    <div class="space-y-4">
      <h2 class="text-2xl font-semibold text-foreground">Featured Grid (1→2→3 columns)</h2>
      <p class="text-muted-foreground text-sm">
        Breakpoints: xs(1) → sm(2) → lg(3)
      </p>
      <GameGrid 
        games={mockGames.slice(0, 3)} 
        title="Featured Games" 
        variant="featured"
      />
    </div>
    
    <!-- Compact Grid Variant -->
    <div class="space-y-4">
      <h2 class="text-2xl font-semibold text-foreground">Compact Grid (2→3→4→6 columns)</h2>
      <p class="text-muted-foreground text-sm">
        Breakpoints: xs(2) → sm(3) → md(4) → lg(6)
      </p>
      <GameGrid 
        games={mockGames} 
        title="All Games" 
        variant="compact"
        moreLink="/all-games"
      />
    </div>
    
    <!-- Grid without title -->
    <div class="space-y-4">
      <h2 class="text-2xl font-semibold text-foreground">Grid without title</h2>
      <GameGrid 
        games={mockGames.slice(0, 4)} 
        variant="standard"
        showTitle={false}
      />
    </div>
  </div>
  
  <!-- Responsive indicator for testing -->
  <div class="fixed bottom-4 right-4 bg-primary text-primary-foreground px-3 py-2 rounded-lg text-sm font-mono">
    <span class="xs:hidden">xs: <480px</span>
    <span class="hidden xs:inline sm:hidden">xs: 480px+</span>
    <span class="hidden sm:inline md:hidden">sm: 640px+</span>
    <span class="hidden md:inline lg:hidden">md: 768px+</span>
    <span class="hidden lg:inline xl:hidden">lg: 1024px+</span>
    <span class="hidden xl:inline 2xl:hidden">xl: 1280px+</span>
    <span class="hidden 2xl:inline">2xl: 1536px+</span>
  </div>
</div>