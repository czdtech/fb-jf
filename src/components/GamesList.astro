---
import ResponsivePicture from '@/components/ResponsivePicture.astro'
import GameCard from './GameCard.astro';
import { getRelativeLocaleUrl } from 'astro:i18n';

interface Props {
  games: Array<{
    slug: string;
    data: {
      title: string;
      image: string;
      category: string;
      description: string;
    };
  }>;
  title?: string;
  variant?: 'grid' | 'list' | 'simple';
  currentLocale?: string;
}

const { games, title, variant = 'grid', currentLocale = (Astro.currentLocale as any) || 'en' } = Astro.props;
---

{title && <h2 class="games-list-title">{title}</h2>}

{variant === 'grid' && (
  <div class="grid gap-4 md:gap-5 lg:gap-6 xl:gap-8 grid-cols-1 xs:grid-cols-2 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4">
    {games.map((game) => {
      // 从 slug 中去除语言后缀，添加安全检查
      const gameSlug = game.slug || game.data?.slug || '';
      const baseSlug = gameSlug.replace(/-[a-z]{2}$/, '');
      return (
        <GameCard game={{ 
          id: baseSlug, 
          slug: baseSlug, 
          iframe: game.data.iframe || '', 
          meta: { 
            title: game.data.title, 
            description: game.data.description, 
            canonical: `/${baseSlug}/`, 
            ogImage: game.data.image 
          }, 
          category: game.data.category || 'popular', 
          title: game.data.title, 
          description: game.data.description, 
          image: game.data.image 
        }} variant="grid" />
      )
    })}
  </div>
)}

{variant === 'list' && (
  <div class="grid gap-4 md:gap-5 lg:gap-6 xl:gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4">
    {games.map((game) => {
      // 从 slug 中去除语言后缀，添加安全检查
      const gameSlug = game.slug || game.data?.slug || '';
      const baseSlug = gameSlug.replace(/-[a-z]{2}$/, '');
      return (
        <GameCard game={{ 
          id: baseSlug, 
          slug: baseSlug, 
          iframe: game.data.iframe || '', 
          meta: { 
            title: game.data.title, 
            description: game.data.description, 
            canonical: `/${baseSlug}/`, 
            ogImage: game.data.image 
          }, 
          category: game.data.category || 'popular', 
          title: game.data.title, 
          description: game.data.description, 
          image: game.data.image 
        }} variant="grid" />
      )
    })}
  </div>
)}

{variant === 'simple' && (
  <ul class="games-simple-list">
    {games.map((game) => {
      // 从 slug 中去除语言后缀，添加安全检查
      const gameSlug = game.slug || game.data?.slug || '';
      const baseSlug = gameSlug.replace(/-[a-z]{2}$/, '');
      return (
        <li>
          <a href={getRelativeLocaleUrl(currentLocale, `/${baseSlug}/`)} title={game.data.title}>
            <ResponsivePicture src={game.data.image} alt={game.data.title} width={60} height={60} decoding="async" loading="lazy" class="rounded-md" />
            <div class="title min-h-[44px] flex items-center">{game.data.title}</div>
          </a>
        </li>
      )
    })}
  </ul>
)}

<style>
  .games-list-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    text-align: center;
    margin-bottom: var(--space-8);
    color: var(--color-gray-900);
  }

  /* 游戏网格样式现在由统一的 game-grids.css 提供 */

  .game {
    text-align: center;
    transition: transform 0.3s ease;
    position: relative;
  }

  .game:hover {
    transform: translateY(-2px);
  }

  .game:hover .game-logo {
    box-shadow:
      0 6px 20px rgba(0, 0, 0, 0.12),
      0 2px 6px rgba(0, 0, 0, 0.08);
  }

  .game a {
    text-decoration: none;
    color: var(--color-gray-900);
    display: block;
    position: relative;
  }

  .game-logo {
    width: 100%;
    height: 200px;
    overflow: hidden;
    border-radius: var(--border-radius-md);
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.08),
      0 1px 3px rgba(0, 0, 0, 0.04);
    margin-bottom: var(--space-3);
    background: var(--color-white);
    position: relative;
  }

  .game-logo img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--duration-500) var(--ease-in-out);
  }

  .game:hover .game-logo img {
    transform: scale(1.05);
  }

  .game-logo::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 50%;
    background: linear-gradient(
      0deg,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      transparent 100%
    );
    z-index: 1;
  }

  .game p {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 2;
    color: white;
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    line-height: var(--line-height-tight);
    margin: 0;
    padding: var(--space-2);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.9), 0 1px 2px rgba(0, 0, 0, 0.8),
      0 0 1px rgba(0, 0, 0, 1);
    text-align: center;
    /* 添加背景色作为备用，确保文字可读性 */
    background: rgba(0, 0, 0, 0.3);
    border-radius: var(--border-radius-sm);
    backdrop-filter: blur(2px);
  }

  .games-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .games-simple-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .games-simple-list li {
    transition: transform 0.3s ease;
  }

  .games-simple-list li:hover {
    transform: translateX(8px);
  }

  .games-simple-list a {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    text-decoration: none;
    color: var(--color-gray-900);
    padding: var(--space-3);
    border-radius: var(--border-radius-lg);
    background: var(--color-gray-50);
    transition: background-color 0.3s ease;
  }

  .games-simple-list a:hover {
    background: var(--color-gray-100);
  }

  .games-simple-list img {
    width: 60px;
    height: 60px;
    object-fit: cover;
    border-radius: var(--border-radius-md);
  }

  .games-simple-list .title {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
  }

  @media (max-width: 768px) {
    .game-logo {
      height: 150px;
    }
  }

  @media (max-width: 480px) {
    .game-logo {
      height: 120px;
    }
  }
</style>
