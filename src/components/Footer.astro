---
import { getTranslation, type SupportedLocale } from '@/i18n/utils';
import { getRelativeLocaleUrl } from 'astro:i18n';

export interface Props {
  className?: string;
  locale?: SupportedLocale;
}

const { className = '', locale } = Astro.props;

// 获取当前语言 - 使用Astro官方i18n系统
const currentLocale: SupportedLocale = locale || (Astro.currentLocale as SupportedLocale) || 'en';

// 获取翻译内容
const translation = await getTranslation(currentLocale);
const uiText = translation.ui;
---

<footer class={`footer safe-area-bottom ${className}`}>
  <div class="responsive-container container-standard safe-area-left safe-area-right">
    <div class="footer-content">
      <div class="footer-section">
        <h3>FiddleBops</h3>
        <p>{uiText?.footer?.tagline || 'Create Music, Share Joy'}</p>
        <p>{uiText?.footer?.description || 'Free Online Music Creation Platform'}</p>
      </div>
      
      <div class="footer-section">
        <h3>{uiText?.footer?.quickLinks || 'Quick Links'}</h3>
        <ul class="footer-links">
          <li><a href={getRelativeLocaleUrl(currentLocale, '/')} class="touch-target">{uiText?.navigation?.home || 'Home'}</a></li>
          <li><a href={getRelativeLocaleUrl(currentLocale, '/games/')} class="touch-target">{uiText?.navigation?.games || 'Games'}</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h3>{uiText?.footer?.legal || 'Legal'}</h3>
        <ul class="footer-links">
          <li><a href={getRelativeLocaleUrl(currentLocale, '/privacy/')} class="touch-target">{uiText?.footer?.privacy || 'Privacy Policy'}</a></li>
          <li><a href={getRelativeLocaleUrl(currentLocale, '/terms-of-service/')} class="touch-target">{uiText?.footer?.terms || 'Terms of Service'}</a></li>
        </ul>
      </div>
      
      <div class="footer-section">
        <h3>{uiText?.footer?.contactUs || 'Contact Us'}</h3>
        <p>Email: chongzhidatech@gmail.com</p>
        <div class="footer-social">
          <a href="#" class="social-link touch-target" aria-label="Social Media">
            <i class="fas fa-music"></i>
          </a>
        </div>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p>{uiText?.footer?.copyright || '© 2025 FiddleBops. All rights reserved.'}</p>
    </div>
  </div>
</footer>

<style>
/* ==========================================================================
   Gaming Footer Component - 游戏风格页脚设计
   ========================================================================== */

.footer {
  background: linear-gradient(
    180deg,
    rgba(248, 250, 252, 0.95) 0%,
    rgba(249, 250, 251, 0.98) 50%,
    rgba(245, 247, 250, 1) 100%
  );
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  color: #4b5563;
  padding: 80px 0 24px;
  margin-top: 80px;
  position: relative;
  overflow: hidden;
}

/* Gaming style top border */
.footer::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #a855f7, #ec4899, #3b82f6, #a855f7);
  background-size: 300% 100%;
  animation: borderFlow 5s linear infinite;
}

/* Background decoration */
.footer::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: 
    radial-gradient(circle at 10% 50%, rgba(168, 85, 247, 0.04) 0%, transparent 50%),
    radial-gradient(circle at 90% 20%, rgba(236, 72, 153, 0.03) 0%, transparent 50%),
    radial-gradient(circle at 50% 80%, rgba(59, 130, 246, 0.02) 0%, transparent 50%);
  pointer-events: none;
  z-index: 0;
}


.footer-content {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 48px;
  margin-bottom: 60px;
}

/* Footer section styling */
.footer-section {
  position: relative;
}

.footer-section h3 {
  font-size: 20px;
  font-weight: 800;
  margin-bottom: 20px;
  background: linear-gradient(135deg, #a855f7 0%, #ec4899 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  letter-spacing: -0.02em;
  display: inline-block;
}

.footer-section:first-child h3 {
  font-size: 28px;
  animation: brandPulse 3s ease-in-out infinite alternate;
}

@keyframes brandPulse {
  0% { filter: brightness(1) contrast(1); }
  100% { filter: brightness(1.1) contrast(1.1); }
}

.footer-section p {
  color: #6b7280;
  line-height: 1.8;
  margin-bottom: 12px;
  font-weight: 500;
}

.footer-section:first-child p:first-of-type {
  font-size: 18px;
  font-weight: 600;
  color: #9333ea;
  margin-bottom: 8px;
}

/* Footer links - Gaming style */
.footer-links {
  list-style: none;
  padding: 0;
  margin: 0;
}

.footer-links li {
  margin-bottom: 12px;
}

.footer-links a {
  color: #6b7280;
  text-decoration: none;
  font-weight: 600;
  padding: 12px 16px;
  display: inline-block;
  border-radius: 20px;
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  position: relative;
  overflow: hidden;
  min-height: 44px;
  min-width: 120px;
  text-align: center;
}

.footer-links a::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(168, 85, 247, 0.1), transparent);
  transition: left 0.5s ease;
}

.footer-links a:hover {
  color: #9333ea;
  background: linear-gradient(135deg, rgba(168, 85, 247, 0.1), rgba(236, 72, 153, 0.05));
  transform: translateX(8px);
  padding-left: 24px;
}

.footer-links a:hover::before {
  left: 100%;
}

/* Social links - Gaming style */
.footer-social {
  display: flex;
  gap: 16px;
  margin-top: 20px;
}

.social-link {
  width: 56px;
  height: 56px;
  background: linear-gradient(135deg, #a855f7, #ec4899);
  border-radius: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  text-decoration: none;
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  box-shadow: 
    0 4px 16px rgba(168, 85, 247, 0.3),
    0 0 0 2px rgba(255, 255, 255, 0.2) inset;
  position: relative;
  overflow: hidden;
  min-width: 56px;
  min-height: 56px;
}

.social-link::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 0;
  height: 0;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  transform: translate(-50%, -50%);
  transition: width 0.6s, height 0.6s;
}

.social-link:hover {
  transform: translateY(-4px) rotate(5deg) scale(1.1);
  box-shadow: 
    0 8px 24px rgba(168, 85, 247, 0.4),
    0 0 0 3px rgba(255, 255, 255, 0.3) inset;
}

.social-link:hover::after {
  width: 80px;
  height: 80px;
}

.social-link i {
  font-size: 20px;
  filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.2));
}

/* Footer bottom - Gaming style */
.footer-bottom {
  text-align: center;
  padding-top: 40px;
  position: relative;
  color: #6b7280;
  font-size: 14px;
  font-weight: 500;
}

.footer-bottom::before {
  content: '';
  position: absolute;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 2px;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(168, 85, 247, 0.2),
    rgba(236, 72, 153, 0.2),
    rgba(59, 130, 246, 0.2),
    transparent
  );
  border-radius: 1px;
}

.footer-bottom p {
  margin: 0;
  letter-spacing: 0.5px;
}

/* ==========================================================================
   响应式设计 - Responsive Design
   ========================================================================== */

@media (max-width: 768px) {
  .footer {
    padding: 60px 0 20px;
    margin-top: 60px;
  }
  
  .footer-content {
    grid-template-columns: 1fr;
    gap: 40px;
    text-align: center;
  }
  
  .footer-section h3 {
    display: block;
    margin: 0 auto 20px;
  }
  
  .footer-links a {
    display: inline-block;
    margin: 0 auto;
  }
  
  .footer-links a:hover {
    transform: translateY(-2px);
    padding-left: 16px;
  }
  
  .footer-social {
    justify-content: center;
  }
}

@media (max-width: 480px) {
  .footer {
    padding: 40px 0 20px;
  }
  
  .footer-content {
    gap: 32px;
  }
  
  .footer-section h3 {
    font-size: 18px;
  }
  
  .footer-section:first-child h3 {
    font-size: 24px;
  }
  
  .footer-section p {
    font-size: 14px;
  }
  
  .footer-links a {
    font-size: 14px;
    padding: 6px 12px;
  }
  
  .social-link {
    width: 40px;
    height: 40px;
  }
  
  .social-link i {
    font-size: 16px;
  }
}
</style>