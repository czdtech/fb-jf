---
export interface Props {
  variant?: 'standard' | 'featured' | 'compact';
  count?: number;
  className?: string;
}

const {
  variant = 'standard',
  count = 8,
  className = ''
} = Astro.props;

// Define responsive grid classes for each variant
const gridClasses = {
  standard: 'grid gap-6 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5',
  featured: 'grid gap-8 grid-cols-1 sm:grid-cols-2 lg:grid-cols-3',
  compact: 'grid gap-4 grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6'
};

const containerClasses = 'w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8';
---

<section class={`games-grid-skeleton ${className}`}>
  <div class={containerClasses}>
    <div class={`games-grid ${gridClasses[variant]}`}>
      {Array.from({ length: count }, (_, index) => (
        <div class="game-card-skeleton">
          {variant === 'featured' ? (
            <!-- Featured card skeleton -->
            <div class="group overflow-hidden border-2 border-primary/20 bg-gradient-to-br from-background to-primary/5 rounded-lg transition-all duration-300">
              <div class="p-0">
                <!-- Featured game image skeleton -->
                <div class="relative overflow-hidden">
                  <div class="aspect-[16/10] w-full animate-pulse rounded-md bg-primary/10"></div>
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
                  <div class="absolute bottom-4 left-4 right-4">
                    <div class="h-8 w-3/4 animate-pulse rounded-md bg-white/20 mb-2"></div>
                    <div class="h-4 w-full animate-pulse rounded-md bg-white/10"></div>
                  </div>
                </div>
                <!-- Featured game stats -->
                <div class="p-6">
                  <div class="flex items-center justify-between mb-4">
                    <div class="h-5 w-24 animate-pulse rounded-md bg-primary/10"></div>
                    <div class="h-5 w-20 animate-pulse rounded-md bg-primary/10"></div>
                  </div>
                  <div class="flex gap-2">
                    <div class="h-6 w-16 animate-pulse rounded-full bg-primary/10"></div>
                    <div class="h-6 w-20 animate-pulse rounded-full bg-primary/10"></div>
                  </div>
                </div>
              </div>
            </div>
          ) : variant === 'compact' ? (
            <!-- Compact card skeleton -->
            <div class="group overflow-hidden border border-primary/20 bg-gradient-to-br from-background to-primary/5 rounded-lg transition-all duration-300">
              <div class="p-0">
                <div class="flex items-center p-3 space-x-3">
                  <!-- Compact image skeleton -->
                  <div class="w-12 h-12 animate-pulse rounded-lg bg-primary/10 flex-shrink-0"></div>
                  <!-- Compact content skeleton -->
                  <div class="flex-1 min-w-0">
                    <div class="h-4 w-full animate-pulse rounded-md bg-primary/10 mb-2"></div>
                    <div class="h-3 w-2/3 animate-pulse rounded-md bg-primary/10"></div>
                  </div>
                  <!-- Compact rating skeleton -->
                  <div class="h-4 w-8 animate-pulse rounded-md bg-primary/10 flex-shrink-0"></div>
                </div>
              </div>
            </div>
          ) : (
            <!-- Standard card skeleton -->
            <div class="group overflow-hidden border border-primary/20 bg-gradient-to-br from-background to-primary/5 rounded-lg transition-all duration-300">
              <div class="p-0">
                <!-- Game image skeleton -->
                <div class="relative overflow-hidden">
                  <div class="aspect-video w-full animate-pulse rounded-md bg-primary/10"></div>
                  <!-- Play button overlay skeleton -->
                  <div class="absolute inset-0 flex items-center justify-center bg-black/20">
                    <div class="w-16 h-16 animate-pulse rounded-full bg-white/20"></div>
                  </div>
                </div>

                <!-- Game info skeleton -->
                <div class="p-4">
                  <div class="space-y-3">
                    <!-- Title skeleton -->
                    <div class="h-5 w-4/5 animate-pulse rounded-md bg-primary/10"></div>

                    <!-- Rating and stats skeleton -->
                    <div class="flex items-center justify-between">
                      <div class="flex items-center space-x-1">
                        <!-- Stars skeleton -->
                        {Array.from({ length: 5 }).map(() => (
                          <div class="w-4 h-4 animate-pulse rounded-md bg-primary/10"></div>
                        ))}
                      </div>
                      <div class="h-4 w-12 animate-pulse rounded-md bg-primary/10"></div>
                    </div>

                    <!-- Tags skeleton -->
                    <div class="flex gap-2">
                      <div class="h-5 w-16 animate-pulse rounded-full bg-primary/10"></div>
                      <div class="h-5 w-20 animate-pulse rounded-full bg-primary/10"></div>
                    </div>

                    <!-- Description skeleton -->
                    <div class="space-y-2">
                      <div class="h-3 w-full animate-pulse rounded-md bg-primary/10"></div>
                      <div class="h-3 w-3/4 animate-pulse rounded-md bg-primary/10"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
