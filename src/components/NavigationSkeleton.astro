---
export interface Props {
  className?: string;
  showMobileMenu?: boolean;
}

const {
  className = '',
  showMobileMenu = true
} = Astro.props;
---

<header class={`sticky top-0 z-50 w-full border-b bg-background/95 backdrop-blur supports-[backdrop-filter]:bg-background/60 ${className}`}>
  <div class="container flex h-16 items-center">
    <!-- Logo Skeleton -->
    <div class="mr-6 flex items-center space-x-2">
      <div class="h-6 w-32 animate-pulse rounded-md bg-primary/10"></div>
    </div>

    <!-- Desktop Navigation Skeleton -->
    <div class="hidden md:flex">
      <nav class="flex items-center space-x-1">
        {Array.from({ length: 4 }).map(() => (
          <div class="h-10 w-20 animate-pulse rounded-md bg-primary/10"></div>
        ))}
      </nav>
    </div>

    <div class="flex flex-1 items-center justify-end space-x-4">
      <!-- Language Selector Skeleton -->
      <div class="hidden md:flex">
        <div class="h-10 w-24 animate-pulse rounded-md bg-primary/10"></div>
      </div>

      <!-- Mobile Menu Toggle Skeleton -->
      {showMobileMenu && (
        <div class="md:hidden">
          <div class="h-10 w-10 animate-pulse rounded-md bg-primary/10"></div>
        </div>
      )}
    </div>
  </div>
</header>
