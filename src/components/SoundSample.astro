---
import type { SoundSample } from '@/types';

export interface Props {
  sample: SoundSample;
}

const { sample } = Astro.props;
const uniqueId = `audio-${sample.title.replace(/[^a-zA-Z0-9]/g, '-').toLowerCase()}`;
---

<div class="sound-sample-card glass" data-sample-id={uniqueId}>
  <div class="sound-sample-image-container">
    <div class="sound-sample-image-wrapper">
      <img src={sample.image} alt={sample.title} class="sound-sample-image">

      <!-- Audio Visualization Rings -->
      <div class="audio-viz-rings">
        <div class="audio-ring ring-1"></div>
        <div class="audio-ring ring-2"></div>
        <div class="audio-ring ring-3"></div>
      </div>

      <!-- Pulse Animation -->
      <div class="audio-pulse"></div>
    </div>

    <!-- Custom Audio Controls -->
    <div class="sound-sample-overlay">
      <div class="custom-audio-controls">
        <button class="play-btn" data-sample-id={uniqueId} type="button">
          <div class="play-icon">
            <svg class="icon-play" viewBox="0 0 24 24" fill="currentColor">
              <path d="M8 5v14l11-7z"/>
            </svg>
            <svg class="icon-pause" viewBox="0 0 24 24" fill="currentColor">
              <path d="M6 19h4V5H6v14zm8-14v14h4V5h-4z"/>
            </svg>
          </div>
          <div class="loading-spinner">
            <div class="spinner-ring"></div>
          </div>
        </button>

        <!-- Progress Ring -->
        <div class="progress-ring">
          <svg class="progress-circle" width="60" height="60">
            <circle
              class="progress-circle-bg"
              stroke="rgba(255,255,255,0.2)"
              stroke-width="2"
              fill="transparent"
              r="28"
              cx="30"
              cy="30"/>
            <circle
              class="progress-circle-fill"
              stroke="currentColor"
              stroke-width="2"
              fill="transparent"
              r="28"
              cx="30"
              cy="30"
              stroke-dasharray="175.929"
              stroke-dashoffset="175.929"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="sound-sample-category">{sample.category}</div>
  </div>

  <div class="sound-sample-content">
    <h3 class="sound-sample-title">{sample.title}</h3>

    <!-- Hidden Audio Element -->
    <audio id={uniqueId} preload="none" class="hidden-audio">
      <source src={sample.audio} type="audio/wav">
    </audio>

    <!-- Audio Waveform Visualization -->
    <div class="audio-waveform">
      <div class="waveform-bars">
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
        <div class="bar"></div>
      </div>
    </div>
  </div>
</div>

<style>
/* Sound Sample Card Styles */
.sound-sample-card {
  border-radius: 20px;
  overflow: hidden;
  border: 1px solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(20px) saturate(180%);
  -webkit-backdrop-filter: blur(20px) saturate(180%);
  box-shadow:
    0 12px 40px rgba(0, 0, 0, 0.15),
    0 4px 16px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.6);
  position: relative;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.2) 0%,
    rgba(255, 255, 255, 0.08) 100%
  );
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  width: 100%;
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
}

/* Playing State Effects */
.sound-sample-card.playing {
  box-shadow:
    0 20px 60px rgba(147, 51, 234, 0.3),
    0 8px 24px rgba(147, 51, 234, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.8);
  border-color: rgba(147, 51, 234, 0.5);
}

.sound-sample-card.loading {
  pointer-events: none;
}

.sound-sample-card:hover {
  transform: translateY(-8px);
  box-shadow:
    0 20px 60px rgba(0, 0, 0, 0.2),
    0 8px 24px rgba(0, 0, 0, 0.15),
    inset 0 1px 0 rgba(255, 255, 255, 0.8);
}


/* Image Container */
.sound-sample-image-container {
  position: relative;
  width: 100%;
  flex: 1;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.1) 0%,
    rgba(255, 255, 255, 0.05) 100%
  );
}

.sound-sample-image-wrapper {
  position: relative;
  width: 160px;
  height: 160px;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 8px;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.3) 0%,
    rgba(255, 255, 255, 0.1) 100%
  );
  border-radius: 50%;
  border: 2px solid rgba(255, 255, 255, 0.4);
  box-shadow:
    0 8px 32px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.6);
  transition: all 0.3s ease;
}

.sound-sample-card.playing .sound-sample-image-wrapper {
  border-color: rgba(147, 51, 234, 0.6);
  box-shadow:
    0 12px 40px rgba(147, 51, 234, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 0.8);
}

.sound-sample-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  object-position: center;
  filter: drop-shadow(0 4px 12px rgba(0, 0, 0, 0.1));
  transition: filter 0.3s ease;
}

/* Audio Visualization Rings */
.audio-viz-rings {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 180px;
  height: 180px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.sound-sample-card.playing .audio-viz-rings {
  opacity: 1;
}

.audio-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: 2px solid rgba(147, 51, 234, 0.3);
  border-radius: 50%;
  animation: audioRipple 2s infinite;
}

.ring-1 {
  width: 160px;
  height: 160px;
  animation-delay: 0s;
}

.ring-2 {
  width: 140px;
  height: 140px;
  animation-delay: 0.3s;
}

.ring-3 {
  width: 180px;
  height: 180px;
  animation-delay: 0.6s;
}

@keyframes audioRipple {
  0% {
    transform: translate(-50%, -50%) scale(0.8);
    opacity: 1;
  }
  100% {
    transform: translate(-50%, -50%) scale(1.2);
    opacity: 0;
  }
}

/* Audio Pulse */
.audio-pulse {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 160px;
  height: 160px;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.1) 0%,
    rgba(255, 255, 255, 0.05) 100%
  );
  border: 1px solid rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  opacity: 1;
  transition: all 0.3s ease;
}

.sound-sample-card.playing .audio-pulse {
  background: radial-gradient(circle, rgba(147, 51, 234, 0.1) 0%, transparent 70%);
  border-color: rgba(147, 51, 234, 0.3);
  animation: pulse 1.5s infinite ease-in-out;
}

@keyframes pulse {
  0%, 100% {
    transform: translate(-50%, -50%) scale(1);
    opacity: 0.7;
  }
  50% {
    transform: translate(-50%, -50%) scale(1.1);
    opacity: 0.3;
  }
}

/* Custom Audio Controls */
.sound-sample-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: all 0.3s ease;
  background: rgba(0, 0, 0, 0.1);
  pointer-events: auto;
}

.sound-sample-card:hover .sound-sample-overlay {
  opacity: 1;
  background: linear-gradient(
    135deg,
    rgba(147, 51, 234, 0.2) 0%,
    rgba(168, 85, 247, 0.3) 100%
  );
}

.sound-sample-card.playing .sound-sample-overlay {
  opacity: 1;
  background: linear-gradient(
    135deg,
    rgba(147, 51, 234, 0.2) 0%,
    rgba(168, 85, 247, 0.3) 100%
  );
}

.custom-audio-controls {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Play Button */
.play-btn {
  width: 60px;
  height: 60px;
  border: none;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 1) 0%,
    rgba(255, 255, 255, 0.95) 100%
  );
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  position: relative;
  box-shadow:
    0 8px 24px rgba(0, 0, 0, 0.3),
    0 4px 8px rgba(0, 0, 0, 0.2),
    inset 0 1px 0 rgba(255, 255, 255, 1);
  border: 2px solid rgba(255, 255, 255, 0.8);
  transform: scale(1);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  z-index: 10;
}

.play-btn:hover {
  transform: scale(1);
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 1) 0%,
    rgba(255, 255, 255, 0.9) 100%
  );
}

.play-btn:active {
  transform: scale(0.95);
}

.play-icon {
  position: relative;
  width: 24px;
  height: 24px;
  color: var(--color-primary-600);
}

.play-icon svg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  transition: all 0.3s ease;
}

.icon-pause {
  opacity: 0;
  transform: scale(0.8);
}

.play-btn.playing .icon-play {
  opacity: 0;
  transform: scale(0.8);
}

.play-btn.playing .icon-pause {
  opacity: 1;
  transform: scale(1);
}

/* Loading Spinner */
.loading-spinner {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 32px;
  height: 32px;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.play-btn.loading .loading-spinner {
  opacity: 1;
}

.play-btn.loading .play-icon {
  opacity: 0;
}

.spinner-ring {
  width: 100%;
  height: 100%;
  border: 3px solid rgba(147, 51, 234, 0.2);
  border-top: 3px solid var(--color-primary-600);
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* Progress Ring */
.progress-ring {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.sound-sample-card.playing .progress-ring {
  opacity: 1;
}

.progress-circle {
  transform: rotate(-90deg);
}

.progress-circle-fill {
  color: var(--color-primary-600);
  transition: stroke-dashoffset 0.1s ease;
}

/* Category Badge */
.sound-sample-category {
  position: absolute;
  top: 12px;
  right: 12px;
  background: linear-gradient(
    135deg,
    rgba(255, 255, 255, 0.9) 0%,
    rgba(255, 255, 255, 0.7) 100%
  );
  color: var(--color-gray-700);
  padding: 4px 12px;
  border-radius: 12px;
  font-size: 12px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  box-shadow:
    0 2px 8px rgba(0, 0, 0, 0.1),
    inset 0 1px 0 rgba(255, 255, 255, 0.8);
  border: 1px solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.sound-sample-card.playing .sound-sample-category {
  background: linear-gradient(
    135deg,
    rgba(147, 51, 234, 0.9) 0%,
    rgba(147, 51, 234, 0.7) 100%
  );
  color: white;
  border-color: rgba(147, 51, 234, 0.5);
}

/* Content Area */
.sound-sample-content {
  padding: 12px 8px;
  text-align: center;
  background: linear-gradient(
    180deg,
    rgba(255, 255, 255, 0.1) 0%,
    rgba(255, 255, 255, 0.05) 100%
  );
  border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.sound-sample-title {
  font-size: 14px;
  font-weight: 700;
  color: var(--color-gray-900);
  margin: 0 0 12px 0;
  line-height: 1.2;
  text-shadow: 0 1px 2px rgba(255, 255, 255, 0.8);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  min-height: 32px;
}

/* Hidden Audio Element */
.hidden-audio {
  display: none;
}


/* Audio Waveform Visualization */
.audio-waveform {
  height: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 1;
  transition: opacity 0.3s ease;
}


.waveform-bars {
  display: flex;
  align-items: end;
  gap: 2px;
  height: 20px;
}

.waveform-bars .bar {
  width: 3px;
  background: linear-gradient(
    to top,
    rgba(147, 51, 234, 0.3) 0%,
    rgba(168, 85, 247, 0.2) 100%
  );
  border-radius: 2px;
  transition: all 0.3s ease;
}

.sound-sample-card.playing .waveform-bars .bar {
  background: linear-gradient(
    to top,
    var(--color-primary-600) 0%,
    var(--color-primary-400) 100%
  );
  animation: waveform 1.5s infinite ease-in-out;
}

.waveform-bars .bar:nth-child(1) { height: 30%; animation-delay: 0.1s; }
.waveform-bars .bar:nth-child(2) { height: 80%; animation-delay: 0.2s; }
.waveform-bars .bar:nth-child(3) { height: 50%; animation-delay: 0.3s; }
.waveform-bars .bar:nth-child(4) { height: 100%; animation-delay: 0.4s; }
.waveform-bars .bar:nth-child(5) { height: 70%; animation-delay: 0.5s; }
.waveform-bars .bar:nth-child(6) { height: 40%; animation-delay: 0.6s; }
.waveform-bars .bar:nth-child(7) { height: 90%; animation-delay: 0.7s; }
.waveform-bars .bar:nth-child(8) { height: 60%; animation-delay: 0.8s; }

@keyframes waveform {
  0%, 100% {
    transform: scaleY(0.3);
    opacity: 0.7;
  }
  50% {
    transform: scaleY(1);
    opacity: 1;
  }
}

/* Responsive Design */
@media (max-width: 1200px) {
  .sound-sample-image-wrapper {
    width: 140px;
    height: 140px;
  }
  
  .audio-viz-rings {
    width: 160px;
    height: 160px;
  }
  
  .ring-1 {
    width: 140px;
    height: 140px;
  }
  
  .ring-2 {
    width: 120px;
    height: 120px;
  }
  
  .ring-3 {
    width: 160px;
    height: 160px;
  }
}

@media (max-width: 768px) {
  .sound-sample-card {
    aspect-ratio: 1;
  }

  .sound-sample-image-wrapper {
    width: 120px;
    height: 120px;
    padding: 6px;
  }
  
  .audio-viz-rings {
    width: 140px;
    height: 140px;
  }
  
  .ring-1 {
    width: 120px;
    height: 120px;
  }
  
  .ring-2 {
    width: 100px;
    height: 100px;
  }
  
  .ring-3 {
    width: 140px;
    height: 140px;
  }

  .sound-sample-content {
    padding: 10px 8px;
  }

  .sound-sample-title {
    font-size: 13px;
  }

  .play-btn {
    width: 50px;
    height: 50px;
  }
  
  .play-icon {
    width: 20px;
    height: 20px;
  }
  
  .sound-sample-category {
    top: 8px;
    right: 8px;
    padding: 3px 10px;
    font-size: 11px;
  }
}

@media (max-width: 480px) {
  .sound-sample-card {
    aspect-ratio: 1;
  }

  .sound-sample-image-wrapper {
    width: 100px;
    height: 100px;
    padding: 6px;
  }
  
  .audio-viz-rings {
    width: 120px;
    height: 120px;
  }
  
  .ring-1 {
    width: 100px;
    height: 100px;
  }
  
  .ring-2 {
    width: 80px;
    height: 80px;
  }
  
  .ring-3 {
    width: 120px;
    height: 120px;
  }

  .play-btn {
    width: 45px;
    height: 45px;
  }
  
  .play-icon {
    width: 18px;
    height: 18px;
  }

  .sound-sample-content {
    padding: 8px 6px;
  }

  .sound-sample-title {
    font-size: 12px;
    margin-bottom: 8px;
    min-height: 28px;
  }

  .sound-sample-category {
    top: 6px;
    right: 6px;
    padding: 2px 8px;
    font-size: 10px;
  }
  
  .waveform-bars {
    gap: 2px;
    height: 16px;
  }
  
  .waveform-bars .bar {
    width: 3px;
  }
}

@media (max-width: 360px) {
  .sound-sample-image-wrapper {
    width: 80px;
    height: 80px;
    padding: 4px;
  }
  
  .audio-viz-rings {
    width: 100px;
    height: 100px;
  }
  
  .ring-1 {
    width: 80px;
    height: 80px;
  }
  
  .ring-2 {
    width: 60px;
    height: 60px;
  }
  
  .ring-3 {
    width: 100px;
    height: 100px;
  }

  .play-btn {
    width: 40px;
    height: 40px;
  }
  
  .play-icon {
    width: 16px;
    height: 16px;
  }
  
  .sound-sample-title {
    font-size: 11px;
  }
}
</style>
