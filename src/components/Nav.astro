---
interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props as Props;

const LANGUAGE_PREFIXES: Record<string, string> = {
  'en': '',
  'zh-CN': '/zh',
  'es': '/es',
  'fr': '/fr',
  'de': '/de',
  'ja': '/ja',
  'ko': '/ko'
};

const prefix = LANGUAGE_PREFIXES[lang] ?? '';
---

<li><a href={`${prefix}/update-games/`}>New Games</a></li>
<li><a href={`${prefix}/fiddlebops-mod/`}>Fiddlebops Mod</a></li>
<li><a href={`${prefix}/incredibox-mod/`}>Incredibox Mod</a></li>
<li><a href={`${prefix}/sprunki-mod/`}>Sprunki Mod</a></li>

