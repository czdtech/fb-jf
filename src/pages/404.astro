---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = '404 - Page Not Found | FiddleBops';
const description = 'The page you are looking for could not be found. Please return to the homepage or check the URL.';
const canonicalUrl = 'https://www.playfiddlebops.com/404/';
---

<BaseLayout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  lang="en"
  noindex={true}
>
  <style>
    .tab-content{background-color:#fcfcfc;padding:80px 30px;border-radius:15px;margin-bottom:20px}
    .page .title{color:#fff}
  </style>

  <section class="error-404">
    <div class="container tab-content">
      <h2>404 - Page Not Found</h2>
      <p>The page you are looking for does not exist or has been moved. Please check the URL or return to the homepage.</p>
      <a href="/">Return to Homepage</a>
    </div>
  </section>
</BaseLayout>