---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { UPDATE_GAMES_HREFLANG } from '../../data/hreflang';
import { getCanonicalGames, toGameCardData } from '../../lib/canonical-games';

export async function getStaticPaths({ paginate }) {
  const canonicalGames = await getCanonicalGames();

  // 动态分页：每页 60 项
  return paginate(canonicalGames, { pageSize: 60 });
}

// 所有分页数据都在 "page" 参数中传递
const { page } = Astro.props;
const locale = 'en';
const title = 'New Games - FiddleBops Game World';
const description =
  'Create your unique music with FiddleBops! This fan-made project, inspired by Incredibox, lets you mix and match various sounds to compose personalized tracks.';
const canonicalUrl = 'https://www.playfiddlebops.com/update-games/';
const ogImage = 'https://www.playfiddlebops.com/tw.jpg';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Game',
  name: title,
  alternateName: 'playfiddlebops.com',
  url: canonicalUrl,
  description
};
---
<BaseLayout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  ogImage={ogImage}
  ogType="website"
  twitterCard="summary_large_image"
  jsonLd={jsonLd}
  hreflangLinks={UPDATE_GAMES_HREFLANG}
  lang="en"
>
  <section class="games">
    <div class="container">
      <h1>New Games</h1>
      <p>
        Discover the latest games added to FiddleBops. Play new and updated titles online for free, no
        download required.
      </p>

      <div class="game-grid">
        {page.data.map((entry) => {
          const card = toGameCardData(entry, locale);
          return (
            <article class="game">
              <a href={card.href} title={card.title}>
                <div class="game-logo">
                  <img src={card.thumbnail} alt={card.title} loading="lazy" width="300" height="300" />
                </div>
                <p>{card.title}</p>
              </a>
            </article>
          );
        })}
      </div>

      <div class="pagination">
        {page.url.prev && <a href={page.url.prev}>«</a>}
        <b class="current">
          {page.currentPage} / {page.lastPage}
        </b>
        {page.url.next && <a href={page.url.next}>»</a>}
      </div>
    </div>
  </section>
</BaseLayout>
