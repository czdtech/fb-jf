// 所有分页数据都在 "page" 参数中传递
const { page } = Astro.props;
const title = 'Sprunki Mod - Sprunki Game World';
const description =
  'Create your unique music with Sprunki! This fan-made project, inspired by Incredibox, lets you mix and match various sounds to compose personalized tracks.';
const canonicalUrl = 'https://www.playfiddlebops.com/sprunki-mod/';
const ogImage = 'https://www.playfiddlebops.com/tw.jpg';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Game',
  name: title,
  alternateName: 'playfiddlebops.com',
  url: canonicalUrl,
  description
};
---
<BaseLayout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  ogImage={ogImage}
  ogType="website"
  twitterCard="summary_large_image"
  jsonLd={jsonLd}
  hreflangLinks={SPRUNKI_MOD_HREFLANG}
  lang="en"
>
  <section class="games">
    <div class="container">
      <h1>Sprunki Mod</h1>
      <p>
        Browse all Sprunki-inspired mods, spin-offs, and crossovers. Play online for free, no download needed.
      </p>

      <div class="game-grid">
        {page.data.map(({ astronaut }) => {
          const [href, thumbnail, gameTitle] = astronaut;

          return (
            <article class="game">
              <a href={href} title={gameTitle}>
                <div class="game-logo game-l-2">
                  <img src={thumbnail} alt={gameTitle} loading="lazy" width="300" height="300" />
                  <div class="game-overlay">
                    <p>{gameTitle}</p>
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>

      <div class="pagination">
        {page.url.prev && <a href={page.url.prev}>«</a>}
        <b class="current">
          {page.currentPage} / {page.lastPage}
        </b>
        {page.url.next && <a href={page.url.next}>»</a>}
      </div>
    </div>
  </section>
</BaseLayout>
