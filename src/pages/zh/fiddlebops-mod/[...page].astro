---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { FIDDLEBOPS_MOD_HREFLANG } from '../../../data/hreflang';
export { getStaticPaths } from '../../fiddlebops-mod/[...page].astro';

const { page } = Astro.props;
const prefix = '/zh';
const title = 'Fiddlebops Mod - FiddleBops 游戏世界';
const description =
  '在 FiddleBops 游戏世界体验各种 Fiddlebops Mod 与同人混音作品，在线免费游玩，无需下载。';
const canonicalUrl = 'https://www.playfiddlebops.com/zh/fiddlebops-mod/';
const ogImage = 'https://www.playfiddlebops.com/tw.jpg';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Game',
  name: title,
  alternateName: 'playfiddlebops.com',
  url: canonicalUrl,
  description
};
---
<BaseLayout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  ogImage={ogImage}
  ogType="website"
  twitterCard="summary_large_image"
  jsonLd={jsonLd}
  hreflangLinks={FIDDLEBOPS_MOD_HREFLANG}
  lang="zh-CN"
>
  <section class="games">
    <div class="container">
      <h1>Fiddlebops Mod</h1>
      <p>
        精选 Fiddlebops 系列 Mod 与扩展版本，一站式收藏。
      </p>

      <div class="game-grid">
        {page.data.map(({ astronaut }) => {
          const [href, thumbnail, gameTitle] = astronaut;
          const localizedHref = href.startsWith('http') ? href : `${prefix}${href}`;

          return (
            <article class="game">
              <a href={localizedHref} title={gameTitle}>
                <div class="game-logo game-l-2">
                  <img src={thumbnail} alt={gameTitle} loading="lazy" width="300" height="300" />
                  <div class="game-overlay">
                    <p>{gameTitle}</p>
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>

      <div class="pagination">
        {page.url.prev && <a href={page.url.prev}>«</a>}
        <b class="current">
          {page.currentPage} / {page.lastPage}
        </b>
        {page.url.next && <a href={page.url.next}>»</a>}
      </div>
    </div>
  </section>
</BaseLayout>
