---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { GAMES_HREFLANG } from '../../../data/hreflang';
import { getCanonicalGames, toGameCardData } from '../../../lib/canonical-games';

export async function getStaticPaths({ paginate }) {
  // Single Source of Truth: use canonical (en) games from astro:content
  const games = await getCanonicalGames();
  return paginate(games, { pageSize: 30 });
}

// 所有分页数据都在 "page" 参数中传递
const { page } = Astro.props;
const locale = 'ja';
const title = 'すべてのゲーム - FiddleBops ゲームワールド';
const description =
  'FiddleBops ゲームワールドに収録されているすべてのゲーム一覧です。Incredibox や Sprunki などの音楽クリエイティブゲームを、ダウンロードなしで無料プレイできます。';
const canonicalUrl = 'https://www.playfiddlebops.com/ja/games/';
const ogImage = 'https://www.playfiddlebops.com/tw.jpg';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Game',
  name: title,
  alternateName: 'playfiddlebops.com',
  url: canonicalUrl,
  description
};
---
<BaseLayout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  ogImage={ogImage}
  ogType="website"
  twitterCard="summary_large_image"
  jsonLd={jsonLd}
  hreflangLinks={GAMES_HREFLANG}
  lang="ja"
>
  <section class="games">
    <div class="container">
      <h1>すべてのゲーム</h1>
      <div class="game-grid">
        {page.data.map((entry) => {
          const card = toGameCardData(entry, locale);
          return (
            <article class="game">
              <a href={card.href} title={card.title}>
                <div class="game-logo game-l-2">
                  <img src={card.thumbnail} alt={card.title} loading="lazy" width="300" height="300" />
                  <div class="game-overlay">
                    <p>{card.title}</p>
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>

      <div class="pagination">
        {page.url.prev && <a href={page.url.prev}>«</a>}
        <b class="current">
          {page.currentPage} / {page.lastPage}
        </b>
        {page.url.next && <a href={page.url.next}>»</a>}
      </div>
    </div>
  </section>
</BaseLayout>
