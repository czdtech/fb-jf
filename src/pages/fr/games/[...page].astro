---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { GAMES_HREFLANG } from '../../../data/hreflang';
import { allGames } from '../../../data/games.js';

export function getStaticPaths({ paginate }) {
  // Réutilise la même source allGames que la version anglaise
  return paginate(allGames, { pageSize: 30 });
}

// 所有分页数据都在 "page" 参数中传递
const { page } = Astro.props;
const prefix = '/fr';
const title = 'Tous les jeux - FiddleBops Game World';
const description =
  'Parcourez la liste complète des jeux sur FiddleBops Game World, y compris Incredibox, Sprunki et d’autres jeux de création musicale. Jouez gratuitement en ligne, sans téléchargement.';
const canonicalUrl = 'https://www.playfiddlebops.com/fr/games/';
const ogImage = 'https://www.playfiddlebops.com/tw.jpg';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Game',
  name: title,
  alternateName: 'playfiddlebops.com',
  url: canonicalUrl,
  description
};
---
<BaseLayout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  ogImage={ogImage}
  ogType="website"
  twitterCard="summary_large_image"
  jsonLd={jsonLd}
  hreflangLinks={GAMES_HREFLANG}
  lang="fr"
>
  <section class="games">
    <div class="container">
      <h1>Tous les jeux</h1>
      <div class="game-grid">
        {page.data.map(({ astronaut }) => {
          const [href, thumbnail, gameTitle] = astronaut;
          const localizedHref = href.startsWith('http') ? href : `${prefix}${href}`;

          return (
            <article class="game">
              <a href={localizedHref} title={gameTitle}>
                <div class="game-logo game-l-2">
                  <img src={thumbnail} alt={gameTitle} loading="lazy" width="300" height="300" />
                  <div class="game-overlay">
                    <p>{gameTitle}</p>
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>

      <div class="pagination">
        {page.url.prev && <a href={page.url.prev}>«</a>}
        <b class="current">
          {page.currentPage} / {page.lastPage}
        </b>
        {page.url.next && <a href={page.url.next}>»</a>}
      </div>
    </div>
  </section>
</BaseLayout>
