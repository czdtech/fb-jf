---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { FIDDLEBOPS_MOD_HREFLANG } from '../../../data/hreflang';
import { toGameCardData } from '../../../lib/canonical-games';
export { getStaticPaths } from '../../fiddlebops-mod/[...page].astro';

const { page } = Astro.props;
const locale = 'fr';
const title = 'Fiddlebops Mod - FiddleBops Game World';
const description =
  'Découvrez différents mods et remixes inspirés de Fiddlebops. Jouez gratuitement en ligne, sans téléchargement.';
const canonicalUrl = 'https://www.playfiddlebops.com/fr/fiddlebops-mod/';
const ogImage = 'https://www.playfiddlebops.com/tw.jpg';
const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'Game',
  name: title,
  alternateName: 'playfiddlebops.com',
  url: canonicalUrl,
  description
};
---
<BaseLayout
  title={title}
  description={description}
  canonicalUrl={canonicalUrl}
  ogImage={ogImage}
  ogType="website"
  twitterCard="summary_large_image"
  jsonLd={jsonLd}
  hreflangLinks={FIDDLEBOPS_MOD_HREFLANG}
  lang="fr"
>
  <section class="games">
    <div class="container">
      <h1>Fiddlebops Mod</h1>
      <p>
        Une sélection de mods et de versions dérivées autour de Fiddlebops.
      </p>

      <div class="game-grid">
        {page.data.map((entry) => {
          const card = toGameCardData(entry, locale);
          return (
            <article class="game">
              <a href={card.href} title={card.title}>
                <div class="game-logo game-l-2">
                  <img src={card.thumbnail} alt={card.title} loading="lazy" width="300" height="300" />
                  <div class="game-overlay">
                    <p>{card.title}</p>
                  </div>
                </div>
              </a>
            </article>
          );
        })}
      </div>

      <div class="pagination">
        {page.url.prev && <a href={page.url.prev}>«</a>}
        <b class="current">
          {page.currentPage} / {page.lastPage}
        </b>
        {page.url.next && <a href={page.url.next}>»</a>}
      </div>
    </div>
  </section>
</BaseLayout>
