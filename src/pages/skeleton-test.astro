---
import Layout from '../layouts/Layout.astro';
import GameGridSkeleton from '../components/GameGridSkeleton.astro';
import NavigationSkeleton from '../components/NavigationSkeleton.astro';
import LanguageSelectorSkeleton from '../components/LanguageSelectorSkeleton.astro';
import AudioPlayerSkeleton from '../components/AudioPlayerSkeleton.astro';
---

<Layout title="Skeleton Loading Test">
  <main class="min-h-screen bg-background">
    <div class="container mx-auto p-6 space-y-12">
      <h1 class="text-3xl font-bold text-center text-foreground mb-8">
        Skeleton Components Test
      </h1>
      
      <!-- Navigation Skeleton -->
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-foreground">Navigation Skeleton</h2>
        <NavigationSkeleton />
      </section>
      
      <!-- Language Selector Skeletons -->
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-foreground">Language Selector Skeletons</h2>
        <div class="flex gap-4">
          <div>
            <h3 class="text-lg font-medium mb-2">Desktop</h3>
            <LanguageSelectorSkeleton variant="default" />
          </div>
          <div>
            <h3 class="text-lg font-medium mb-2">Mobile</h3>
            <LanguageSelectorSkeleton variant="mobile" />
          </div>
        </div>
      </section>
      
      <!-- Audio Player Skeleton -->
      <section class="space-y-4">
        <h2 class="text-2xl font-semibold text-foreground">Audio Player Skeleton</h2>
        <div class="max-w-md">
          <AudioPlayerSkeleton />
        </div>
      </section>
      
      <!-- Game Grid Skeletons -->
      <section class="space-y-8">
        <h2 class="text-2xl font-semibold text-foreground">Game Grid Skeletons</h2>
        
        <!-- Standard Grid -->
        <div>
          <h3 class="text-xl font-medium mb-4">Standard Grid (5 columns)</h3>
          <GameGridSkeleton variant="standard" count={10} />
        </div>
        
        <!-- Featured Grid -->
        <div>
          <h3 class="text-xl font-medium mb-4">Featured Grid (3 columns)</h3>
          <GameGridSkeleton variant="featured" count={6} />
        </div>
        
        <!-- Compact Grid -->
        <div>
          <h3 class="text-xl font-medium mb-4">Compact Grid (6 columns)</h3>
          <GameGridSkeleton variant="compact" count={12} />
        </div>
      </section>
    </div>
  </main>
</Layout>