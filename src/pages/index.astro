// èŽ·å–å½“å‰è¯­è¨€ - ä½¿ç”¨Astroå®˜æ–¹i18nç³»ç»Ÿ
const currentLocale: SupportedLocale = (Astro.currentLocale as SupportedLocale) || 'en';

// èŽ·å–ç¿»è¯‘å†…å®¹
const translation = await getTranslation(currentLocale);
const uiText = translation.ui;
const homeContent = translation.home;

// èŽ·å–å½“å‰è¯­è¨€çš„æ¸¸æˆ - ä½¿ç”¨Content Collections API
const currentPath = Astro.url.pathname;

let allGames: any[] = [];

try {
  // âœ… ä¿®å¤å®Œæˆï¼šçŽ°åœ¨ä½¿ç”¨æ­£ç¡®çš„Content Collections API
  console.log(`ðŸ” Loading games for locale: ${currentLocale}`);
  
  // ä½¿ç”¨ä¿®å¤åŽçš„getLocalizedGamesListå‡½æ•°
  const { getLocalizedGamesList } = await import('@/utils/i18n');
  allGames = await getLocalizedGamesList(currentLocale);
  
  console.log(`âœ… Successfully loaded ${allGames.length} games for ${currentLocale}`);
  
  // éªŒè¯å†…å®¹è¯­è¨€æ­£ç¡®æ€§
  console.log('ðŸ” Content verification:');
  allGames.slice(0, 3).forEach((game, index) => {
    const firstSentence = game.data.description.substring(0, 100);
    console.log(`${index + 1}. ${game.data.slug} âœ…`);
