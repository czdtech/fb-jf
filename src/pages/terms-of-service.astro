---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Header from '@/components/Header.astro'
import Footer from '@/components/Footer.astro'
import extractedData from '@/data/extracted-data.json'

const { navigation } = extractedData

// 多语言配置
const hreflangLinks = navigation.languages.map((lang: any) => ({
  code: lang.code === 'en' ? 'x-default' : lang.code,
  url: `https://www.playfiddlebops.com/terms-of-service/`,
  label: lang.label,
}))

// Meta data for terms page
const meta = {
  title: "Terms of Service | FiddleBops",
  description: "Read our Terms of Service to understand the rules and guidelines for using FiddleBops. Learn about your rights and responsibilities as a user.",
  canonical: "https://www.playfiddlebops.com/terms-of-service/",
  ogImage: "https://www.playfiddlebops.com/tw.jpg",
  robots: "index, follow"
}
---

<BaseLayout
  meta={meta}
  lang="en"
  hreflang={hreflangLinks}
>
  <Header
    navigation={navigation.main}
    languages={navigation.languages}
    currentLang="en"
    currentPath="/terms-of-service/"
  />

  <main class="terms-page">
    <!-- Hero Section -->
    <section class="terms-hero section">
      <div class="container">
        <div class="terms-hero-content">
          <!-- 面包屑导航 -->
          <nav class="breadcrumb" aria-label="面包屑导航">
            <a href="/" class="breadcrumb-link">
              <i class="fas fa-home"></i>
              <span>Home</span>
            </a>
            <span class="breadcrumb-separator">></span>
            <span class="breadcrumb-current">Terms of Service</span>
          </nav>

          <div class="hero-content">
            <h1 class="terms-title heading-display">
              <span class="title-main">Terms of</span>
              <span class="title-accent">Service</span>
            </h1>
            <p class="terms-subtitle body-large">
              Please read these terms carefully before using our services.
              By using FiddleBops, you agree to these terms and conditions.
            </p>
            <div class="last-updated">
              <i class="fas fa-calendar-alt"></i>
              <span>Last updated: February 10, 2025</span>
            </div>
          </div>

          <!-- 装饰性图标 -->
          <div class="terms-icons">
            <div class="terms-icon"><i class="fas fa-gavel"></i></div>
            <div class="terms-icon"><i class="fas fa-balance-scale"></i></div>
            <div class="terms-icon"><i class="fas fa-handshake"></i></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Terms Content Section -->
    <section class="terms-content section">
      <div class="container">
        <div class="content-wrapper">

          <!-- Navigation Menu -->
          <aside class="terms-nav glass">
            <h3>Table of Contents</h3>
            <ul>
              <li><a href="#agreement">Agreement to Terms</a></li>
              <li><a href="#services">Our Services</a></li>
              <li><a href="#ip">Intellectual Property</a></li>
              <li><a href="#userreps">User Representations</a></li>
              <li><a href="#prohibited">Prohibited Activities</a></li>
              <li><a href="#ugc">User Contributions</a></li>
              <li><a href="#privacy">Privacy Policy</a></li>
              <li><a href="#termination">Termination</a></li>
              <li><a href="#disclaimer">Disclaimer</a></li>
              <li><a href="#liability">Liability</a></li>
              <li><a href="#contact">Contact Us</a></li>
            </ul>
          </aside>

          <!-- Main Content -->
          <article class="terms-article glass">

            <section id="agreement">
              <h2>Agreement to Our Legal Terms</h2>
              <p>We are <strong>playfiddlebops</strong>.</p>
              <p>We operate the website <a href="https://www.playfiddlebops.com" target="_blank" rel="noopener">https://www.playfiddlebops.com</a> (the "<strong>Site</strong>"), as well as any other related products and services that refer or link to these legal terms (the "<strong>Legal Terms</strong>") (collectively, the "<strong>Services</strong>").</p>
              <p>You can contact us by email at <strong>chongzhidatech@gmail.com</strong></p>

              <div class="important-box">
                <i class="fas fa-exclamation-circle"></i>
                <div>
                  <h5>Important Notice</h5>
                  <p>These legal terms constitute a legally binding agreement. By accessing the Services, you agree to be bound by all of these Legal Terms. <strong>If you do not agree with all of these legal terms, then you are expressly prohibited from using the services and you must discontinue use immediately.</strong></p>
                </div>
              </div>

              <p>The services are intended for users who are at least 18 years old. Persons under the age of 18 are not permitted to use or register for the services.</p>
            </section>

            <section id="services">
              <h2>Our Services</h2>
              <p>The information provided when using the services is not intended for distribution to or use by any person or entity in any jurisdiction or country where such distribution or use would be contrary to law or regulation.</p>
              <p>The services are not tailored to comply with industry-specific regulations (HIPAA, FISMA, etc.), so if your interactions would be subjected to such laws, you may not use the services.</p>

              <div class="service-features">
                <div class="feature-item">
                  <i class="fas fa-music"></i>
                  <h4>Music Creation</h4>
                  <p>Interactive music and rhythm games</p>
                </div>
                <div class="feature-item">
                  <i class="fas fa-gamepad"></i>
                  <h4>Game Library</h4>
                  <p>Collection of creative games</p>
                </div>
                <div class="feature-item">
                  <i class="fas fa-users"></i>
                  <h4>Community</h4>
                  <p>Share and discover creations</p>
                </div>
              </div>
            </section>

            <section id="ip">
              <h2>Intellectual Property Rights</h2>
              <h3>Our Intellectual Property</h3>
              <p>We are the owner or the licensee of all intellectual property rights in our services, including all source code, databases, functionality, software, website designs, audio, video, text, photographs, and graphics in the services (collectively, the "<strong>Content</strong>"), as well as the trademarks, service marks, and logos contained therein (the "<strong>Marks</strong>").</p>

              <h3>Your Use of Our Services</h3>
              <p>Subject to your compliance with these legal terms, we grant you a non-exclusive, non-transferable, revocable license to:</p>
              <ul>
                <li>Access the services; and</li>
                <li>Download or print a copy of any portion of the content to which you have properly gained access,</li>
              </ul>
              <p>Solely for your personal, non-commercial use or internal business purpose.</p>

              <div class="warning-box">
                <i class="fas fa-copyright"></i>
                <div>
                  <h5>Copyright Notice</h5>
                  <p>No part of the services may be copied, reproduced, or distributed for any commercial purpose without our express prior written permission.</p>
                </div>
              </div>
            </section>

            <section id="userreps">
              <h2>User Representations</h2>
              <p>By using the Services, you represent and warrant that:</p>
              <ul>
                <li>All registration information you submit will be true, accurate, current, and complete</li>
                <li>You will maintain the accuracy of such information</li>
                <li>You have the legal capacity and you agree to comply with these Legal Terms</li>
                <li>You are not under the age of 18</li>
                <li>You will not access the Services through automated or non-human means</li>
                <li>You will not use the Services for any illegal or unauthorized purpose</li>
                <li>Your use of the Services will not violate any applicable law or regulation</li>
              </ul>
            </section>

            <section id="prohibited">
              <h2>Prohibited Activities</h2>
              <p>You may not access or use the Services for any purpose other than that for which we make the Services available. The Services may not be used in connection with any commercial endeavors except those that are specifically endorsed or approved by us.</p>

              <div class="prohibited-grid">
                <div class="prohibited-item">
                  <i class="fas fa-ban"></i>
                  <h4>No Spam</h4>
                  <p>Sending spam or unsolicited messages</p>
                </div>
                <div class="prohibited-item">
                  <i class="fas fa-virus"></i>
                  <h4>No Malware</h4>
                  <p>Uploading viruses or malicious code</p>
                </div>
                <div class="prohibited-item">
                  <i class="fas fa-user-slash"></i>
                  <h4>No Harassment</h4>
                  <p>Harassing other users</p>
                </div>
                <div class="prohibited-item">
                  <i class="fas fa-shield-virus"></i>
                  <h4>No Hacking</h4>
                  <p>Attempting to hack or exploit the system</p>
                </div>
              </div>
            </section>

            <section id="ugc">
              <h2>User Generated Contributions</h2>
              <p>The Services may invite you to chat, contribute to, or participate in blogs, message boards, online forums, and other functionality, and may provide you with the opportunity to create, submit, post, display, transmit, perform, publish, distribute, or broadcast content and materials to us or on the Services.</p>

              <div class="info-box">
                <i class="fas fa-upload"></i>
                <div>
                  <h5>Content Responsibility</h5>
                  <p>You are solely responsible for any content you post. Ensure your content complies with all applicable laws and our community guidelines.</p>
                </div>
              </div>
            </section>

            <section id="privacy">
              <h2>Privacy Policy</h2>
              <p>We care about data privacy and security. Please review our Privacy Policy: <a href="/privacy/" target="_blank">https://www.playfiddlebops.com/privacy/</a>. By using the Services, you agree to be bound by our Privacy Policy, which is incorporated into these Legal Terms.</p>

              <div class="privacy-link">
                <a href="/privacy/" class="btn btn-secondary">
                  <i class="fas fa-shield-alt"></i>
                  <span>Read Privacy Policy</span>
                </a>
              </div>
            </section>

            <section id="termination">
              <h2>Term and Termination</h2>
              <p>These Legal Terms shall remain in full force and effect while you use the Services. We reserve the right to, in our sole discretion and without notice or liability, deny access to and use of the Services to any person for any reason or for no reason, including without limitation for breach of any representation, warranty, or covenant contained in these Legal Terms.</p>
            </section>

            <section id="disclaimer">
              <h2>Disclaimer</h2>
              <p>The Services are provided on an AS-IS and AS-AVAILABLE basis. You agree that your use of the Services will be at your sole risk. To the fullest extent permitted by law, we disclaim all warranties, express or implied, in connection with the Services.</p>

              <div class="disclaimer-box">
                <i class="fas fa-info-circle"></i>
                <div>
                  <h5>No Warranties</h5>
                  <p>We make no warranties about the accuracy, reliability, completeness, or timeliness of the content, services, software, text, graphics, and links.</p>
                </div>
              </div>
            </section>

            <section id="liability">
              <h2>Limitations of Liability</h2>
              <p>In no event will we or our directors, employees, or agents be liable to you or any third party for any direct, indirect, consequential, exemplary, incidental, special, or punitive damages, including lost profit, lost revenue, loss of data, or other damages arising from your use of the Services.</p>
            </section>

            <section id="contact">
              <h2>Contact Us</h2>
              <p>In order to resolve a complaint regarding the Services or to receive further information regarding use of the Services, please contact us at:</p>

              <div class="contact-info">
                <div class="contact-item">
                  <i class="fas fa-envelope"></i>
                  <div>
                    <h5>Email</h5>
                    <span>chongzhidatech@gmail.com</span>
                  </div>
                </div>
                <div class="contact-item">
                  <i class="fas fa-globe"></i>
                  <div>
                    <h5>Website</h5>
                    <span><a href="https://www.playfiddlebops.com/">www.playfiddlebops.com</a></span>
                  </div>
                </div>
              </div>
            </section>

          </article>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  /* ===== TERMS OF SERVICE PAGE STYLES ===== */

  /* Page Background */
  body {
    background: var(--hero-main-bg);
    min-height: 100vh;
  }

  .terms-page {
    background: transparent;
  }

  /* Terms Hero Section */
  .terms-hero {
    background: var(--hero-main-bg);
    color: var(--color-text);
    padding: var(--space-16) 0 var(--space-8);
    padding-top: calc(80px + var(--space-8));
    position: relative;
    overflow: hidden;
  }

  .terms-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--hero-texture-bg);
    opacity: var(--hero-texture-opacity);
    pointer-events: none;
  }

  .terms-hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
  }

  /* Breadcrumb Navigation */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
    font-size: var(--font-size-sm);
    justify-content: center;
  }

  .breadcrumb-link {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    color: var(--color-primary-600);
    text-decoration: none;
    transition: all var(--duration-200) var(--ease-in-out);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius-md);
  }

  .breadcrumb-link:hover {
    color: var(--color-primary-700);
    background: rgba(147, 51, 234, 0.1);
  }

  .breadcrumb-separator {
    color: var(--color-gray-400);
    font-weight: 500;
  }

  .breadcrumb-current {
    color: var(--color-gray-600);
    font-weight: 500;
  }

  /* Hero Content */
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .terms-title {
    margin-bottom: var(--space-6);
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .title-main {
    display: block;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title-accent {
    display: block;
    background: linear-gradient(45deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .terms-subtitle {
    margin-bottom: var(--space-6);
    color: var(--color-text-muted);
  }

  .last-updated {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(147, 51, 234, 0.1);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--border-radius-md);
    color: var(--color-primary-600);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  /* Terms Icons */
  .terms-icons {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    pointer-events: none;
    z-index: 1;
  }

  .terms-icon {
    position: absolute;
    font-size: 3rem;
    color: rgba(147, 51, 234, 0.1);
    animation: float-icons 12s ease-in-out infinite;
  }

  .terms-icon:nth-child(1) {
    left: 10%;
    top: 20%;
    animation-delay: 0s;
  }

  .terms-icon:nth-child(2) {
    right: 10%;
    top: 30%;
    animation-delay: 3s;
  }

  .terms-icon:nth-child(3) {
    left: 15%;
    top: 70%;
    animation-delay: 6s;
  }

  @keyframes float-icons {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.1; }
    25% { transform: translateY(-10px) rotate(2deg); opacity: 0.15; }
    50% { transform: translateY(-20px) rotate(-1deg); opacity: 0.1; }
    75% { transform: translateY(-10px) rotate(1deg); opacity: 0.15; }
  }

  /* Content Section */
  .terms-content {
    background: transparent;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  /* Navigation Menu */
  .terms-nav {
    position: sticky;
    top: calc(80px + var(--space-4));
    padding: var(--space-6);
    border-radius: var(--border-radius-xl);
  }

  .terms-nav h3 {
    margin-bottom: var(--space-4);
    color: var(--color-text);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
  }

  .terms-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .terms-nav li {
    margin-bottom: var(--space-2);
  }

  .terms-nav a {
    display: block;
    padding: var(--space-2) var(--space-3);
    color: var(--color-text-muted);
    text-decoration: none;
    border-radius: var(--border-radius-md);
    transition: all var(--duration-200) var(--ease-in-out);
    font-size: var(--font-size-sm);
  }

  .terms-nav a:hover {
    color: var(--color-primary-600);
    background: rgba(147, 51, 234, 0.1);
    transform: translateX(4px);
  }

  /* Article Content */
  .terms-article {
    padding: var(--space-8);
    border-radius: var(--border-radius-xl);
    line-height: 1.7;
  }

  .terms-article h2 {
    color: var(--color-text);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    padding-bottom: var(--space-2);
    border-bottom: 2px solid var(--color-primary-600);
  }

  .terms-article h2:first-child {
    margin-top: 0;
  }

  .terms-article h3 {
    color: var(--color-text);
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-medium);
  }

  .terms-article h4 {
    color: var(--color-text);
    margin-top: var(--space-4);
    margin-bottom: var(--space-2);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
  }

  .terms-article h5 {
    color: var(--color-text);
    margin-bottom: var(--space-2);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
  }

  .terms-article p {
    margin-bottom: var(--space-4);
    color: var(--color-text-muted);
  }

  .terms-article ul {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .terms-article li {
    margin-bottom: var(--space-2);
    color: var(--color-text-muted);
  }

  .terms-article a {
    color: var(--color-primary-600);
    text-decoration: none;
    transition: color var(--duration-200) var(--ease-in-out);
  }

  .terms-article a:hover {
    color: var(--color-primary-700);
    text-decoration: underline;
  }

  .terms-article strong {
    color: var(--color-text);
    font-weight: var(--font-weight-semibold);
  }

  /* Info Boxes */
  .important-box, .warning-box, .info-box, .disclaimer-box {
    display: flex;
    gap: var(--space-3);
    padding: var(--space-4);
    border-radius: var(--border-radius-md);
    margin: var(--space-6) 0;
  }

  .important-box {
    background: rgba(239, 68, 68, 0.1);
    border-left: 4px solid #ef4444;
  }

  .warning-box {
    background: rgba(245, 158, 11, 0.1);
    border-left: 4px solid #f59e0b;
  }

  .info-box {
    background: rgba(59, 130, 246, 0.1);
    border-left: 4px solid #3b82f6;
  }

  .disclaimer-box {
    background: rgba(107, 114, 128, 0.1);
    border-left: 4px solid #6b7280;
  }

  .important-box i {
    color: #ef4444;
  }

  .warning-box i {
    color: #f59e0b;
  }

  .info-box i {
    color: #3b82f6;
  }

  .disclaimer-box i {
    color: #6b7280;
  }

  .important-box i, .warning-box i, .info-box i, .disclaimer-box i {
    font-size: var(--font-size-xl);
    margin-top: var(--space-1);
  }

  /* Service Features Grid */
  .service-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    margin: var(--space-6) 0;
  }

  .feature-item {
    text-align: center;
    padding: var(--space-6);
    background: rgba(147, 51, 234, 0.05);
    border-radius: var(--border-radius-lg);
    transition: all var(--duration-200) var(--ease-in-out);
  }

  .feature-item:hover {
    transform: translateY(-4px);
    background: rgba(147, 51, 234, 0.1);
  }

  .feature-item i {
    font-size: 2rem;
    color: var(--color-primary-600);
    margin-bottom: var(--space-3);
  }

  .feature-item h4 {
    margin-bottom: var(--space-2);
    color: var(--color-text);
  }

  .feature-item p {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  /* Prohibited Activities Grid */
  .prohibited-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    margin: var(--space-6) 0;
  }

  .prohibited-item {
    text-align: center;
    padding: var(--space-4);
    background: rgba(239, 68, 68, 0.05);
    border-radius: var(--border-radius-md);
    border: 1px solid rgba(239, 68, 68, 0.1);
  }

  .prohibited-item i {
    font-size: 1.5rem;
    color: #ef4444;
    margin-bottom: var(--space-2);
  }

  .prohibited-item h4 {
    margin-bottom: var(--space-1);
    color: var(--color-text);
    font-size: var(--font-size-sm);
  }

  .prohibited-item p {
    margin: 0;
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  /* Privacy Link */
  .privacy-link {
    margin: var(--space-6) 0;
    text-align: center;
  }

  /* Contact Info */
  .contact-info {
    margin-top: var(--space-6);
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    padding: var(--space-4);
    background: rgba(147, 51, 234, 0.05);
    border-radius: var(--border-radius-md);
  }

  .contact-item i {
    color: var(--color-primary-600);
    font-size: var(--font-size-xl);
  }

  .contact-item h5 {
    margin-bottom: var(--space-1);
    color: var(--color-text);
  }

  .contact-item span {
    color: var(--color-text-muted);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .terms-nav {
      position: static;
      order: 2;
    }

    .terms-article {
      padding: var(--space-6);
    }

    .terms-hero {
      padding: var(--space-12) 0 var(--space-6);
    }

    .breadcrumb {
      margin-bottom: var(--space-4);
    }

    .service-features, .prohibited-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }

  @media (max-width: 480px) {
    .terms-article {
      padding: var(--space-4);
    }

    .terms-title {
      font-size: var(--font-size-3xl);
    }
  }
</style>
