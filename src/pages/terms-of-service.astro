---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Navigation from '@/components/Navigation.astro'
import Footer from '@/components/Footer.astro'
import LegalPage from '@/components/legal/LegalPage.astro'
import extractedData from '@/data/extracted-data.json'
import { getEntry } from 'astro:content'
import { generateHreflangLinks } from '@/utils/hreflang'

const { navigation } = extractedData

// 获取当前语言
const locale = 'en'

// 从内容集合加载法务内容
const legalContent = await getEntry('legal', locale)
const termsData = legalContent?.data.terms

if (!termsData) {
  throw new Error(`Terms content not found for locale: ${locale}`)
}

// 多语言配置
const hreflangLinks = generateHreflangLinks(
  navigation.languages.map((lang: any) => ({ code: lang.code, label: lang.label })),
  '/terms-of-service',
  'https://www.playfiddlebops.com'
)

// Meta data for terms page
const meta = {
  title: termsData.meta.title,
  description: termsData.meta.description,
  canonical: "https://www.playfiddlebops.com/terms-of-service/",
  ogImage: "https://www.playfiddlebops.com/tw.jpg",
  robots: "index, follow"
}
---

<BaseLayout
  meta={meta}
  lang="en"
  hreflang={hreflangLinks}
>
  <Navigation
    navigation={navigation.main}
    languages={navigation.languages}
    currentLang="en"
    currentPath="/terms-of-service/"
  />

  <LegalPage
    locale={locale}
    kind="terms"
    currentPath="/terms-of-service/"
  />

  <Footer />
</BaseLayout>

<style>
  /* ===== TERMS OF SERVICE PAGE STYLES ===== */

  /* Page Background */
  body {
    background: var(--hero-main-bg);
    min-height: 100vh;
  }

  .terms-page {
    background: transparent;
  }

  /* Terms Hero Section */
  .terms-hero {
    background: var(--hero-main-bg);
    color: var(--color-text);
    padding: var(--space-16) 0 var(--space-8);
    padding-top: calc(80px + var(--space-8));
    position: relative;
    overflow: hidden;
  }

  .terms-hero::before {
    content: '';
    position: absolute;
    inset: 0;
    background: var(--hero-texture-bg);
    opacity: var(--hero-texture-opacity);
    pointer-events: none;
  }

  .terms-hero-content {
    position: relative;
    z-index: 10;
    text-align: center;
  }

  /* Breadcrumb Navigation */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-6);
    font-size: var(--font-size-sm);
    justify-content: center;
  }

  .breadcrumb-link {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    color: var(--color-primary-600);
    text-decoration: none;
    transition: all var(--duration-200) var(--ease-in-out);
    padding: var(--space-1) var(--space-2);
    border-radius: var(--border-radius-md);
  }

  .breadcrumb-link:hover {
    color: var(--color-primary-700);
    background: rgba(147, 51, 234, 0.1);
  }

  .breadcrumb-separator {
    color: var(--color-gray-400);
    font-weight: 500;
  }

  .breadcrumb-current {
    color: var(--color-gray-600);
    font-weight: 500;
  }

  /* Hero Content */
  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .terms-title {
    margin-bottom: var(--space-6);
    text-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  .title-main {
    display: block;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .title-accent {
    display: block;
    background: linear-gradient(45deg, var(--color-primary-600) 0%, var(--color-primary-700) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .terms-subtitle {
    margin-bottom: var(--space-6);
    color: var(--color-text-muted);
  }

  .last-updated {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: rgba(147, 51, 234, 0.1);
    padding: var(--space-2) var(--space-4);
    border-radius: var(--border-radius-md);
    color: var(--color-primary-600);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
  }

  /* Terms Icons */
  .terms-icons {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    pointer-events: none;
    z-index: 1;
  }

  .terms-icon {
    position: absolute;
    font-size: 3rem;
    color: rgba(147, 51, 234, 0.1);
    animation: float-icons 12s ease-in-out infinite;
  }

  .terms-icon:nth-child(1) {
    left: 10%;
    top: 20%;
    animation-delay: 0s;
  }

  .terms-icon:nth-child(2) {
    right: 10%;
    top: 30%;
    animation-delay: 3s;
  }

  .terms-icon:nth-child(3) {
    left: 15%;
    top: 70%;
    animation-delay: 6s;
  }

  @keyframes float-icons {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.1; }
    25% { transform: translateY(-10px) rotate(2deg); opacity: 0.15; }
    50% { transform: translateY(-20px) rotate(-1deg); opacity: 0.1; }
    75% { transform: translateY(-10px) rotate(1deg); opacity: 0.15; }
  }

  /* Content Section */
  .terms-content {
    background: transparent;
  }

  .content-wrapper {
    display: grid;
    grid-template-columns: 300px 1fr;
    gap: var(--space-12);
    align-items: start;
  }

  /* Navigation Menu */
  .terms-nav {
    position: sticky;
    top: calc(80px + var(--space-4));
    padding: var(--space-6);
    border-radius: var(--border-radius-xl);
  }

  .terms-nav h3 {
    margin-bottom: var(--space-4);
    color: var(--color-text);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
  }

  .terms-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .terms-nav li {
    margin-bottom: var(--space-2);
  }

  .terms-nav a {
    display: block;
    padding: var(--space-2) var(--space-3);
    color: var(--color-text-muted);
    text-decoration: none;
    border-radius: var(--border-radius-md);
    transition: all var(--duration-200) var(--ease-in-out);
    font-size: var(--font-size-sm);
  }

  .terms-nav a:hover {
    color: var(--color-primary-600);
    background: rgba(147, 51, 234, 0.1);
    transform: translateX(4px);
  }

  /* Article Content */
  .terms-article {
    padding: var(--space-8);
    border-radius: var(--border-radius-xl);
    line-height: 1.7;
  }

  .terms-article h2 {
    color: var(--color-text);
    margin-top: var(--space-8);
    margin-bottom: var(--space-4);
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-semibold);
    padding-bottom: var(--space-2);
    border-bottom: 2px solid var(--color-primary-600);
  }

  .terms-article h2:first-child {
    margin-top: 0;
  }

  .terms-article h3 {
    color: var(--color-text);
    margin-top: var(--space-6);
    margin-bottom: var(--space-3);
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-medium);
  }

  .terms-article h4 {
    color: var(--color-text);
    margin-top: var(--space-4);
    margin-bottom: var(--space-2);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-medium);
  }

  .terms-article h5 {
    color: var(--color-text);
    margin-bottom: var(--space-2);
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
  }

  .terms-article p {
    margin-bottom: var(--space-4);
    color: var(--color-text-muted);
  }

  .terms-article ul {
    margin-bottom: var(--space-4);
    padding-left: var(--space-6);
  }

  .terms-article li {
    margin-bottom: var(--space-2);
    color: var(--color-text-muted);
  }

  .terms-article a {
    color: var(--color-primary-600);
    text-decoration: none;
    transition: color var(--duration-200) var(--ease-in-out);
  }

  .terms-article a:hover {
    color: var(--color-primary-700);
    text-decoration: underline;
  }

  .terms-article strong {
    color: var(--color-text);
    font-weight: var(--font-weight-semibold);
  }

  /* Info Boxes */
  .important-box, .warning-box, .info-box, .disclaimer-box {
    display: flex;
    gap: var(--space-3);
    padding: var(--space-4);
    border-radius: var(--border-radius-md);
    margin: var(--space-6) 0;
  }

  .important-box {
    background: rgba(239, 68, 68, 0.1);
    border-left: 4px solid #ef4444;
  }

  .warning-box {
    background: rgba(245, 158, 11, 0.1);
    border-left: 4px solid #f59e0b;
  }

  .info-box {
    background: rgba(59, 130, 246, 0.1);
    border-left: 4px solid #3b82f6;
  }

  .disclaimer-box {
    background: rgba(107, 114, 128, 0.1);
    border-left: 4px solid #6b7280;
  }

  .important-box i {
    color: #ef4444;
  }

  .warning-box i {
    color: #f59e0b;
  }

  .info-box i {
    color: #3b82f6;
  }

  .disclaimer-box i {
    color: #6b7280;
  }

  .important-box i, .warning-box i, .info-box i, .disclaimer-box i {
    font-size: var(--font-size-xl);
    margin-top: var(--space-1);
  }

  /* Service Features Grid */
  .service-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-6);
    margin: var(--space-6) 0;
  }

  .feature-item {
    text-align: center;
    padding: var(--space-6);
    background: rgba(147, 51, 234, 0.05);
    border-radius: var(--border-radius-lg);
    transition: all var(--duration-200) var(--ease-in-out);
  }

  .feature-item:hover {
    transform: translateY(-4px);
    background: rgba(147, 51, 234, 0.1);
  }

  .feature-item i {
    font-size: 2rem;
    color: var(--color-primary-600);
    margin-bottom: var(--space-3);
  }

  .feature-item h4 {
    margin-bottom: var(--space-2);
    color: var(--color-text);
  }

  .feature-item p {
    margin: 0;
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
  }

  /* Prohibited Activities Grid */
  .prohibited-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
    margin: var(--space-6) 0;
  }

  .prohibited-item {
    text-align: center;
    padding: var(--space-4);
    background: rgba(239, 68, 68, 0.05);
    border-radius: var(--border-radius-md);
    border: 1px solid rgba(239, 68, 68, 0.1);
  }

  .prohibited-item i {
    font-size: 1.5rem;
    color: #ef4444;
    margin-bottom: var(--space-2);
  }

  .prohibited-item h4 {
    margin-bottom: var(--space-1);
    color: var(--color-text);
    font-size: var(--font-size-sm);
  }

  .prohibited-item p {
    margin: 0;
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  /* Privacy Link */
  .privacy-link {
    margin: var(--space-6) 0;
    text-align: center;
  }

  /* Contact Info */
  .contact-info {
    margin-top: var(--space-6);
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-4);
    padding: var(--space-4);
    background: rgba(147, 51, 234, 0.05);
    border-radius: var(--border-radius-md);
  }

  .contact-item i {
    color: var(--color-primary-600);
    font-size: var(--font-size-xl);
  }

  .contact-item h5 {
    margin-bottom: var(--space-1);
    color: var(--color-text);
  }

  .contact-item span {
    color: var(--color-text-muted);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .content-wrapper {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .terms-nav {
      position: static;
      order: 2;
    }

    .terms-article {
      padding: var(--space-6);
    }

    .terms-hero {
      padding: var(--space-12) 0 var(--space-6);
    }

    .breadcrumb {
      margin-bottom: var(--space-4);
    }

    .service-features, .prohibited-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
  }

  @media (max-width: 480px) {
    .terms-article {
      padding: var(--space-4);
    }

    .terms-title {
      font-size: var(--font-size-3xl);
    }
  }
</style>
