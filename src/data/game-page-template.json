{
  "templateStructure": {
    "head": {
      "meta": {
        "charset": "UTF-8",
        "viewport": "width=device-width, initial-scale=1.0",
        "title": "{gameTitle} - Play {gameTitle} Online",
        "keywords": "{gameTitle}, {gameTitle} online",
        "description": "{gameDescription}",
        "robots": "index, follow",
        "canonical": "https://www.playfiddlebops.com/{gameSlug}/"
      },
      "structuredData": {
        "@context": "https://schema.org",
        "@type": "Game",
        "name": "{gameTitle} - Play {gameTitle} Online",
        "alternateName": "playfiddlebops.com",
        "url": "https://www.playfiddlebops.com/{gameSlug}/",
        "description": "{gameDescription}"
      },
      "openGraph": {
        "title": "{gameTitle} - Play {gameTitle} Online",
        "description": "{gameDescription}",
        "url": "https://www.playfiddlebops.com/{gameSlug}/",
        "siteName": "FiddleBops",
        "locale": "en_US",
        "image": "https://www.playfiddlebops.com/{gameImage}",
        "type": "website"
      },
      "twitter": {
        "card": "summary_large_image",
        "site": "https://www.playfiddlebops.com/{gameSlug}/",
        "title": "{gameTitle} - Play {gameTitle} Online",
        "description": "{gameDescription}",
        "image": "https://www.playfiddlebops.com/{gameImage}"
      },
      "links": [
        {"rel": "icon", "href": "https://www.playfiddlebops.com/favicon.ico"},
        {"rel": "stylesheet", "href": "/main.css"},
        {"rel": "preconnect", "href": "https://fonts.googleapis.com"},
        {"rel": "preconnect", "href": "https://fonts.gstatic.com", "crossorigin": true},
        {"rel": "stylesheet", "href": "https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;700&display=swap"},
        {"rel": "stylesheet", "href": "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"}
      ]
    },
    "body": {
      "header": {
        "component": "Header"
      },
      "main": {
        "hero": {
          "gameCard": {
            "popularGames": "PopularGames",
            "gameIframe": {
              "id": "fiddlebops-iframe",
              "src": "",
              "backgroundImage": "/assets/{gameImage}",
              "iframeSrc": "{gameIframeSrc}"
            },
            "playButton": {
              "id": "playButton",
              "text": "Play"
            },
            "newGames": "NewGames"
          }
        },
        "trendingGames": "TrendingGames",
        "about": {
          "title": "About {gameTitle}",
          "breadcrumb": "home > {gameTitle}",
          "rating": {
            "score": "{gameRating}",
            "maxScore": 5,
            "votes": "{gameVotes}"
          },
          "content": "{gameContent}"
        }
      },
      "footer": {
        "navigation": [
          {"label": "Privacy Policy", "url": "/privacy/"},
          {"label": "Terms of service", "url": "/terms-of-service/"}
        ],
        "copyright": "Â© 2025 FiddleBops. All rights reserved."
      },
      "socialShare": {
        "platforms": ["x", "reddit", "facebook", "telegram", "whatsapp", "linkedin"],
        "addToAnyConfig": {
          "mobile": {"bottom": "0px", "right": "0px"},
          "desktop": {"left": "0px", "top": "150px"}
        }
      }
    },
    "scripts": {
      "navigation": {
        "function": "navToggle",
        "description": "Handle mobile navigation toggle"
      },
      "gameLoader": {
        "function": "loadIframe", 
        "description": "Load game iframe on play button click"
      },
      "languageSelector": {
        "function": "goToLink",
        "description": "Handle language selection"
      },
      "analytics": {
        "gtag": "G-9JME3P55QJ",
        "adsense": "ca-pub-1444054360166733"
      },
      "addToAny": {
        "src": "https://static.addtoany.com/menu/page.js"
      }
    },
    "styles": {
      "gameSpecific": {
        "gameIframe": {
          "width": "69%",
          "height": "600px",
          "backgroundImage": "linear-gradient(rgba(255, 255, 255, 0.5), rgba(255, 255, 255, 0.3)), url(/{gameImage})"
        },
        "responsive": {
          "tablet": "max-width: 980px",
          "mobile": "max-width: 768px"
        }
      }
    }
  },
  "commonPatterns": {
    "imports": [
      "Header from './header.astro'",
      "NewGames from './new-games.astro'",
      "PopularGames from './popular-games.astro'",
      "TrendingGames from './trending-games.astro'"
    ],
    "variableFields": [
      "gameTitle",
      "gameSlug", 
      "gameDescription",
      "gameImage",
      "gameIframeSrc",
      "gameRating",
      "gameVotes",
      "gameContent"
    ]
  }
}